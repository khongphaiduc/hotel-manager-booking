@{
    ViewBag.Title = "Đăng ký tài khoản mới";
    Layout = null;
}

@model Management_Hotel_2025.Models.User;
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Animate.css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/RegisterAccountCSS.css" />
</head>
<body>
    <div class="position-fixed top-0 start-0 w-100 h-100" style="z-index:0;">
        <img src="https://decoxdesign.com/upload/images/mau-khach-san-5-sao-05-decox-design.jpg"
        class="w-100 h-100 object-fit-cover" style="filter: blur(4px) brightness(0.65);" alt="background hotel" />
    </div>
    <div class="container py-5 d-flex align-items-center justify-content-center min-vh-100" style="z-index:1; position:relative;">
        <div class="col-12 col-md-8 col-lg-5 bg-glass card-animate shadow-lg p-4 p-md-5 mx-auto">
            <div class="text-center mb-4">
                <img src="https://decoxdesign.com/upload/images/mau-khach-san-5-sao-05-decox-design.jpg" alt="Hotel" width="58" class="mb-2 animate__animated animate__bounceIn">
                <h2 class="fw-bold text-primary mb-1">Tạo tài khoản mới</h2>
                <p class="text-muted small mb-0">Tham gia để nhận ưu đãi và quản lý đặt phòng dễ dàng</p>
            </div>
            <form asp-action="RegisterAccount" asp-controller="Authen" method="post">
                <div class="form-floating mb-3">
                    <input asp-for="Username" type="text" class="form-control" id="FullName" placeholder="Họ và tên" required>
                    <label for="FullName">Họ và tên</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Email" type="email" class="form-control" id="Email"  placeholder="Email" required>
                    <label for="Email">Email</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="PhoneNumber" type="tel" class="form-control" id="Phone"  placeholder="Số điện thoại" required>
                    <label for="Phone">Số điện thoại</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="Password" name="Password" placeholder="Mật khẩu" minlength="8" required>
                    <label for="Password">Mật khẩu</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" placeholder="Xác nhận mật khẩu" required>
                    <label for="ConfirmPassword">Xác nhận mật khẩu</label>
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100 fw-bold mb-3 btn-waves position-relative">
                    Đăng ký
                </button>
                <div class="d-flex align-items-center mb-2">
                    <hr class="flex-grow-1" />
                    <span class="mx-2 text-secondary small">Hoặc</span>
                    <hr class="flex-grow-1" />
                </div>

                <p class="text-center small mb-0">
                    Đã có tài khoản? <a asp-controller="Authen" asp-action="Login" class="link-primary fw-bold">Đăng nhập</a>
                </p>
            </form>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-3" role="alert">
                    @ViewBag.Error
                </div>
            }


            @if (ViewBag.Status != null)
            {
                <div class="alert alert-danger mt-3" role="alert">
                    @ViewBag.Status
                </div>
            }

        </div>
    </div>
    <!-- Bootstrap JS (nếu cần hiệu ứng JS của Bootstrap) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>