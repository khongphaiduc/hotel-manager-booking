@page
<!-- sẽ chỉ file này là  1 endpoint có thể truy cập trực tiếp qua URL.(thông thường mỗi 1 file  thì phải run quan controller) -->
@{
    Layout = null;
}

<!-- Layout bằng null có nghĩa là không sử dụng layout chúng của project  -->
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Luxury Hotel - Trang Chủ</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Animate.css -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet"/>
    <!-- AOS.js CSS -->
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet"/>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-lg">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="https://i.ytimg.com/vi/ptDXS9XYmvI/maxresdefault.jpg" alt="Luxury Hotel" width="40" class="me-2">
                <span class="fs-3 fw-bold">TrungDucLuxury Hotel</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link active" href="#">Trang chủ</a></li>
                    <li class="nav-item"><a class="nav-link" href="/book">Đặt phòng</a></li>                  
                    <li class="nav-item"><a class="nav-link" href="/contact">Liên hệ</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Authen" asp-action="Login">Đăng Nhập</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Banner Slider -->
    <div id="bannerCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">

            <!-- Carousel Item 1: Video MP4 -->
            <div class="carousel-item active">
                <video class="d-block w-100 banner-video" autoplay loop muted playsinline>
                    <source src="/video/introduction.mp4" type="video/mp4">
                    Trình duyệt của bạn không hỗ trợ video.
                </video>
                <div class="carousel-caption d-none d-md-block animate__animated animate__fadeInDown">
                    <h1 class="display-5 fw-bold text-shadow">Trải nghiệm nghỉ dưỡng đẳng cấp</h1>
                    <p class="fs-4 modern-banner-text">
                        Thưởng thức kỳ nghỉ sang trọng và nhận ưu đãi <span class="light-effect">đặc biệt</span> hôm nay!
                    </p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#bannerCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#bannerCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>



    <!-- Ảnh -->
    <section class="py-5 bg-light" data-aos="fade-up">
        <div class="container">
            <div id="hotelImagesCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner rounded shadow-lg">
                    <div class="carousel-item active">
                        <img src="https://img.freepik.com/premium-photo/luxurious-hotel-lobby-with-marble-floors-gold-accents-comfortable-seating_14117-728026.jpg" class="d-block w-100 hotel-img" alt="Ảnh khách sạn 1">
                    </div>
                    <div class="carousel-item">
                        <img src="https://sleepifier.com/wp-content/uploads/pixxio_images/thumbnail_1953643250.jpg" class="d-block w-100 hotel-img" alt="Ảnh khách sạn 2">
                    </div>
                    <div class="carousel-item">
                        <img src="https://www.yankodesign.com/images/design_news/2024/08/elements-of-interior-design-form/00-elements-design-form-1.jpg" class="d-block w-100 hotel-img" alt="Ảnh khách sạn 3">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#hotelImagesCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#hotelImagesCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </button>
            </div>
        </div>
    </section>

    <!-- About Luxury Hotel -->
    <section class="container py-5" data-aos="fade-right">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <img src="https://sleepifier.com/wp-content/uploads/pixxio_images/thumbnail_1953643250.jpg" alt="Luxury Hotel" class="img-fluid rounded shadow-lg">
            </div>
            <div class="col-lg-6">
                <h2 class="fw-bold mb-3">Giới thiệu Trung Duc Luxury Hotel</h2>
                <p class="lead">Luxury Hotel tọa lạc tại trung tâm thành phố, thiết kế sang trọng, dịch vụ chuyên nghiệp và tiện nghi hiện đại. Chúng tôi cam kết mang lại trải nghiệm nghỉ dưỡng hoàn hảo nhất cho quý khách.</p>
                <ul class="list-unstyled">
                    <li><i class="bi bi-check-circle text-primary"></i> Vị trí đắc địa</li>
                    <li><i class="bi bi-check-circle text-primary"></i> Dịch vụ 5 sao</li>
                    <li><i class="bi bi-check-circle text-primary"></i> Tiện ích đa dạng</li>
                </ul>
            </div>
        </div>
    </section>

    <!-- Services -->
    <!-- Services -->
    <section class="bg-white py-5" data-aos="fade-left">
        <div class="container">
            <h2 class="fw-bold text-center mb-4">Dịch vụ nổi bật</h2>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-3 mb-4" data-aos="zoom-in">
                    <div class="service-card-big p-3 shadow rounded text-center">
                        <img src="https://thewatsonpremiumhalonghotel.com/uploads/photos/full_1682151095_1545_0164ca8fbd6cd13b628b7d34936e865f.jpg"
                             alt="Hồ bơi ngoài trời"
                             class="service-img-big mb-3" />
                        <h5 class="fw-bold mb-2">Hồ bơi ngoài trời</h5>
                        <p>Thư giãn và tận hưởng không gian xanh, sạch, đẹp.</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4" data-aos="zoom-in" data-aos-delay="150">
                    <div class="service-card-big p-3 shadow rounded text-center">
                        <img src="https://mtcs.1cdn.vn/2022/07/18/xanh-3.jpg"
                             alt="Spa & Massage"
                             class="service-img-big mb-3" />
                        <h5 class="fw-bold mb-2">Spa & Massage</h5>
                        <p>Chăm sóc sức khỏe và sắc đẹp với đội ngũ chuyên nghiệp.</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4" data-aos="zoom-in" data-aos-delay="300">
                    <div class="service-card-big p-3 shadow rounded text-center">
                        <img src="https://cdn0126.cdn4s.com/media/nha-hang-sen-2.jpg"
                             alt="Nhà hàng Âu - Á"
                             class="service-img-big mb-3" />
                        <h5 class="fw-bold mb-2">Nhà hàng Âu - Á</h5>
                        <p>Thực đơn phong phú, không gian sang trọng.</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4" data-aos="zoom-in" data-aos-delay="450">
                    <div class="service-card-big p-3 shadow rounded text-center">
                        <img src="https://dynamic-media-cdn.tripadvisor.com/media/photo-o/29/59/99/fb/grand-ballroom.jpg?w=700&h=-1&s=1"
                             alt="Phòng hội nghị"
                             class="service-img-big mb-3" />
                        <h5 class="fw-bold mb-2">Phòng hội nghị</h5>
                        <p>Đầy đủ tiện nghi, đáp ứng mọi nhu cầu sự kiện.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Reviews -->
    <section class="bg-gradient py-5" data-aos="zoom-in">
        <div class="container">
            <h2 class="fw-bold text-center mb-5">Đánh giá khách hàng</h2>
            <div class="row justify-content-center">
                <div class="col-md-4 mb-4" data-aos="fade-up">
                    <div class="card shadow-lg border-0 h-100 review-card">
                        <div class="card-body text-center">
                            <img src="https://randomuser.me/api/portraits/men/32.jpg" class="rounded-circle mb-3 shadow" width="70" height="70" alt="Nguyễn Văn A">
                            <h5 class="card-title fw-bold mb-2">Nguyễn Văn A</h5>
                            <div class="mb-2">
                                <span class="text-warning fs-4">&#9733;&#9733;&#9733;&#9733;&#9733;</span>
                            </div>
                            <blockquote class="blockquote mb-0 fw-normal">
                                "Kỳ nghỉ tuyệt vời, phòng sạch sẽ, nhân viên thân thiện! Sẽ quay lại lần sau."
                            </blockquote>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4" data-aos="fade-up" data-aos-delay="150">
                    <div class="card shadow-lg border-0 h-100 review-card">
                        <div class="card-body text-center">
                            <img src="https://randomuser.me/api/portraits/women/44.jpg" class="rounded-circle mb-3 shadow" width="70" height="70" alt="Trần Thị B">
                            <h5 class="card-title fw-bold mb-2">Trần Thị B</h5>
                            <div class="mb-2">
                                <span class="text-warning fs-4">&#9733;&#9733;&#9733;&#9733;&#9734;</span>
                            </div>
                            <blockquote class="blockquote mb-0 fw-normal">
                                "Dịch vụ xuất sắc, view đẹp, rất hài lòng với kỳ nghỉ tại Luxury Hotel."
                            </blockquote>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4" data-aos="fade-up" data-aos-delay="300">
                    <div class="card shadow-lg border-0 h-100 review-card">
                        <div class="card-body text-center">
                            <img src="https://randomuser.me/api/portraits/men/65.jpg" class="rounded-circle mb-3 shadow" width="70" height="70" alt="Lê Văn C">
                            <h5 class="card-title fw-bold mb-2">Lê Văn C</h5>
                            <div class="mb-2">
                                <span class="text-warning fs-4">&#9733;&#9733;&#9733;&#9733;&#9733;</span>
                            </div>
                            <blockquote class="blockquote mb-0 fw-normal">
                                "Không gian sang trọng, đồ ăn ngon, nhân viên chu đáo!"
                            </blockquote>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container text-center">
            <p>&copy; 2025 Trung Duc Luxury Hotel. Hotline: 0123 456 789 | Email: ptrungduc1011@gmail.com</p>
            <div>
                <a href="#" class="text-light me-2"><i class="bi bi-facebook"></i> Facebook</a>
                <a href="#" class="text-light"><i class="bi bi-instagram"></i> Instagram</a>
            </div>
        </div>
    </footer>

    <!-- JS: Bootstrap, AOS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 1000,
            once: true
        });
    </script>
</body>
</html>