@model Management_Hotel_2025.ViewModel.RoomPassengers
@{
    Layout = "~/Views/Shared/StaffHeader.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Thông tin phòng & hành khách</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .room-card {
            border-radius: 15px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.15);
            background: white;
            padding: 20px;
            transition: transform 0.2s ease;
        }

            .room-card:hover {
                transform: translateY(-3px);
            }

        .room-header {
            border-bottom: 2px solid #dee2e6;
            margin-bottom: 15px;
            padding-bottom: 8px;
        }

        .badge-status {
            font-size: 0.9rem;
            padding: 5px 10px;
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .service-table th {
            background-color: #e9ecef;
        }

        .section-title {
            margin-top: 35px;
            border-left: 5px solid #0d6efd;
            padding-left: 10px;
        }
    </style>
</head>
<body>

    <div class="container mt-4">
        <h2 class="mb-4 text-center fw-bold">Thông tin phòng & hành khách</h2>

        <!-- Thông tin phòng và hành khách -->
        <div class="room-card">
            <div class="room-header d-flex justify-content-between align-items-center">
                <h4 class="fw-bold">Phòng: @Model.RoomName</h4>
                <span class="badge
                @(Model.Status == "CheckIn" ? "bg-success" :
                  Model.Status == "CheckOut" ? "bg-danger" : "bg-secondary")">
                    @Model.Status
                </span>
            </div>

            <h5 class="section-title">Danh sách hành khách</h5>
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Họ tên</th>
                        <th>Giới tính</th>
                        <th>CMND/CCCD</th>
                        <th>Ngày sinh</th>
                        <th>Số điện thoại</th>
                        <th>Chi tiết</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Passengers != null && Model.Passengers.Any())
                    {
                        int index = 1;
                        foreach (var p in Model.Passengers)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@p.FullName</td>
                                <td>@p.Gender</td>
                                <td>@p.CodePersonal</td>
                                <td>@(p.BirthDay.HasValue ? p.BirthDay.Value.ToString("dd/MM/yyyy") : "Chưa có")</td>

                                <td>@p.PhoneNumber</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary" onclick="showDetails('@p.FullName', '@p.Address')">
                                        Xem thêm
                                    </button>
                                </td>
                            </tr>
                            index++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted">Không có hành khách nào trong phòng này</td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Danh sách dịch vụ -->
            <h5 class="section-title">Danh sách dịch vụ đang sử dụng</h5>
            <table class="table table-bordered table-striped service-table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Tên dịch vụ</th>
                        <th>Số lượng</th>
                        <th>Đơn giá</th>
                        <th>Ưu đãi</th>
                        <th>Mô tả</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Services != null && Model.Services.Any())
                    {
                        int stt = 1;
                        foreach (var s in Model.Services)
                        {
                            <tr>
                                <td>@stt</td>
                                <td>@s.ServiceName</td>
                                <td>1</td>
                                <td>@String.Format("{0:N0}₫", s.Price)</td>
                                <td>@String.Format("{0:N0}₫", s.Discount)</td>
                                <td>@s.Description</td>
                            </tr>
                            stt++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">Phòng này chưa sử dụng dịch vụ nào</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Modal xem chi tiết hành khách -->
    <div class="modal fade" id="passengerModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content rounded-4">
                <div class="modal-header">
                    <h5 class="modal-title fw-bold">Chi tiết hành khách</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                </div>
                <div class="modal-body">
                    <p><strong>Họ tên:</strong> <span id="detailName"></span></p>
                    <p><strong>Địa chỉ:</strong> <span id="detailAddress"></span></p>
                    <p><strong>Email:</strong> <span id="detailEmail"></span></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function showDetails(name, address, email) {
            document.getElementById('detailName').textContent = name;
            document.getElementById('detailAddress').textContent = address;
            document.getElementById('detailEmail').textContent = email;

            const modal = new bootstrap.Modal(document.getElementById('passengerModal'));
            modal.show();
        }
    </script>

</body>
</html>
