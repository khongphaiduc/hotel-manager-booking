@model IEnumerable<Management_Hotel_2025.Modules.Invoices.InvocieModels.InvoicesViewModel>
@{
    ViewBag.Title = "Danh sách hóa đơn khách sạn";
    Layout = "~/Views/Shared/AdminSidebar.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap CSS CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <style>
        .status-paid {
            color: #2ecc40;
            font-weight: bold;
        }

        .status-unpaid {
            color: #ff4136;
            font-weight: bold;
        }

        .status-pending {
            color: #ff851b;
            font-weight: bold;
        }

        .status-cancel {
            color: #aaaaaa;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <h2 class="mb-4 text-center text-primary">Danh sách hóa đơn khách sạn</h2>
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Mã hoá đơn</th>
                    <th>Tên khách hàng</th>
                    <th>Số phòng</th>
                    <th>Ngày nhận - Ngày trả</th>
                    <th>Tổng tiền</th>
                    <th>Trạng thái</th>
                    <th>Nhân viên tạo</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    int stt = 1;
                    foreach (var invoice in Model)
                    {
                        <tr>
                            <td>@stt</td>
                            <td>@invoice.InvoiceCode</td>
                            <td>@invoice.CustomerName</td>
                            <td>@invoice.RoomNumber</td>
                            <td>
                                @invoice.CheckInDate?.ToString("dd/MM/yyyy") -
                                @invoice.CheckOutDate?.ToString("dd/MM/yyyy")
                            </td>
                            <td>@string.Format("{0:#,##0} đ", invoice.TotalAmount)</td>
                            <td>
                                @{
                                    var statusClass =
                                    invoice.StatusInvoice == "Đã thanh toán" ? "status-paid" :
                                    invoice.StatusInvoice == "Chưa thanh toán" ? "status-unpaid" :
                                    invoice.StatusInvoice == "Đang xử lý" ? "status-pending" :
                                    "status-cancel";
                                }
                                <span class="@statusClass">@invoice.StatusInvoice</span>
                            </td>
                            <td>@invoice.CreatedBy</td>
                        </tr>
                        stt++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center text-danger">Không có dữ liệu</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>