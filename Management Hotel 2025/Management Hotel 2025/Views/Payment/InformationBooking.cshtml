@{
    Layout = null;
}
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Thông tin đặt phòng</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/BookingInfo.css" />
    <link rel="stylesheet" href="~/css/BookingCalendar.css" />
</head>
<body class="bg-light">
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white d-flex align-items-center">
                        <a href="#" class="text-decoration-none text-dark me-3">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                        <h4 class="mb-0 flex-grow-1 text-center fw-semibold">THÔNG TIN ĐẶT PHÒNG</h4>
                    </div>
                    <div class="card-body bg-white">
                        <div class="row g-4">
                            <!-- Left form -->
                            <div class="col-lg-7">
                                <form id="bookingForm" asp-action="CreatePaymentUrlVnpay" asp-controller="Payment" method="get">

                                    <div class="mb-3">
                                        <label class="form-label">Yêu cầu thêm</label>
                                        <textarea class="form-control" rows="2" placeholder="Ví dụ: Sở thích về Giường, địa điểm đón hoặc trả khách" name="note"></textarea>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Chính sách đặt phòng</label>
                                        <div class="p-2 border rounded bg-light">
                                            <div class="form-check mb-2">
                                                <input class="form-check-input" type="checkbox" id="policy1" checked disabled>
                                                <label class="form-check-label fw-semibold" for="policy1">
                                                    Phòng Deluxe King hướng thành phố
                                                </label>
                                            </div>
                                            <small class="text-muted d-block mb-1">
                                                Hủy: Nếu hủy hoặc thay đổi đặt sớm hơn 7 ngày trước ngày nhận phòng, không có khoản phí hủy phòng nào phải thanh toán. Nếu hủy hoặc thay đổi đặt phòng trong vòng 7 ngày trước ngày nhận phòng, hoặc trong trường hợp không đến, tổng giá trị tiền đặt phòng phải thanh toán.
                                            </small>
                                            <small class="d-block mb-1">Thanh toán: Thanh toán toàn bộ giá trị tiền đặt phòng.</small>
                                            <small class="d-block">Đã bao gồm ăn sáng</small>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Phương thức thanh toán</label>
                                        <select class="form-select" id="paymentMethod" name="paymentMethod" required>
                                            <option value="vnpay">VNPAY (ATM/QR/Thẻ quốc tế)</option>
                                        </select>

                                    </div>
                                    @* <div class="form-check mb-3"> *@
                                    @*     <input class="form-check-input" type="checkbox" value="" id="acceptTerms" required> *@
                                    @*     <label class="form-check-label" for="acceptTerms"> *@
                                    @*         Tôi đồng ý với điều khoản đặt phòng *@
                                    @*     </label> *@
                                    @* </div> *@


                                    <input type="hidden" name="name" value="" />



                                    <button type="submit" class="btn btn-primary btn-lg w-100 fw-bold">
                                        THỰC HIỆN ĐẶT PHÒNG
                                    </button>
                                </form>
                            </div>
                            <!-- Right booking info -->
                            <div class="col-lg-5">
                                <div class="p-3 bg-light rounded border mb-3">
                                    <h6 class="fw-bold mb-2">Yêu cầu đặt phòng của bạn</h6>
                                    <div class="mb-2">
                                        <strong>@HttpContextAccessor.HttpContext.Session.GetString("NameRoom")</strong>
                                        <div class="text-muted small">
                                            Nhận phòng:@HttpContextAccessor.HttpContext.Session.GetString("StartDate")<br>
                                            Trả phòng: @HttpContextAccessor.HttpContext.Session.GetString("EndDate")
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="mb-2">
                                        <div class="d-flex justify-content-between">
                                            <span>Thông tin phòng</span>
                                            <span>Thu gọn</span>
                                        </div>
                                        <div class="small">
                                            1 Phòng Deluxe King hướng thành phố<br>
                                            Early Bird 7/2025<br>
                                            Dành cho: 1 Người lớn - 0 Trẻ em - 0 Em bé<br>
                                            Giá phòng: @{
                                                var amountStr = HttpContextAccessor.HttpContext.Session.GetString("Amount");
                                                decimal amount = 0;

                                                if (!string.IsNullOrEmpty(amountStr))
                                                {
                                                    decimal.TryParse(amountStr, out amount);
                                                }
                                            }

                                            <span>Giá phòng: @string.Format("{0:N0}", amount) đ</span>
                                        </div>
                                    </div>
                                    <hr>
                               
                                    <div class="mb-3">
                                        <input type="text" class="form-control" placeholder="Nhập mã khuyến mãi/mã voucher" id="voucherCode">
                                        <button type="button" class="btn btn-outline-primary btn-sm mt-2 w-100" id="applyVoucher">ÁP DỤNG</button>
                                    </div>
                                    <hr>
                                    <div class="mb-2 d-flex justify-content-between align-items-center">
                                        <span class="fw-bold">Tổng giá:</span>
                                        <span class="fw-bold text-warning" style="font-size: 1.3rem;"> <span>Giá phòng: @string.Format("{0:N0}", amount) đ</span></span>
                                    </div>
                                    <small class="text-danger">
                                        Bao gồm tất cả các loại thuế và phí dịch vụ<br>
                                        (Theo quy định của Ngân hàng Nhà nước Việt Nam, Quý khách vui lòng thanh toán bằng VND)
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS + Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Optionally: include your own JS below -->
    <script src="~/js/BookingInfo.js"></script>
    <script src="~/js/BookingCalendar.js"></script>
</body>
</html>