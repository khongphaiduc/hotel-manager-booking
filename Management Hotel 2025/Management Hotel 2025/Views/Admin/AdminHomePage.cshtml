@{
    Layout = "~/Views/Shared/AdminSidebar.cshtml";
}
@model Management_Hotel_2025.ViewModel.AdminListsViewRoom

<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Dashboard Booking</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/booking.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <div class="container-fluid py-4">

        <!-- Tabs + Table -->
        <div class="card shadow-sm">
            <div class="card-body">
                <ul class="nav nav-tabs tab-border" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="arrive-tab" data-bs-toggle="tab" data-bs-target="#arrive" type="button" role="tab">Phòng đến trong ngày</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="depart-tab" data-bs-toggle="tab" data-bs-target="#depart" type="button" role="tab">Phòng đi trong ngày</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="inuse-tab" data-bs-toggle="tab" data-bs-target="#inuse" type="button" role="tab">Phòng đang sử dụng</button>
                    </li>
                    <li class="nav-item ms-auto">
                        <div class="text-muted small mt-2">Tổng: TEST đặt phòng</div>
                    </li>
                </ul>

                <div class="tab-content mt-3">
                    <div class="tab-pane fade" id="arrive" role="tabpanel">
                        <div class="table-responsive">
                            <table class="table table-hover booking-table align-middle">
                                <thead>
                                    <tr>
                                        <th scope="col" style="width:60px;">STT</th>

                                        <th scope="col">KHÁCH HÀNG</th>
                                        <th scope="col">LOẠI PHÒNG</th>
                                        <th scope="col">SỐ PHÒNG</th>
                                        <th scope="col">NGÀY ĐẾN</th>
                                        <th scope="col">NGÀY ĐI</th>
                                        <th scope="col">LOẠI KHÁCH</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var b in Model.ListCheckInToday.Select((value, index) => new { value, index }))
                                    {
                                        <tr>
                                            <td>@(b.index + 1)</td>
                                            <td>@b.value.NameCustomer</td>
                                            <td>@b.value.TypeRoom</td>
                                            <td>@b.value.NumberOfRoom</td>
                                            <td>@b.value.DayCheckIn.ToString("dd/MM/yyyy")</td>
                                            <td>@b.value.DayCheckOut.ToString("dd/MM/yyyy")</td>
                                            <td class="text-muted">@b.value.TypeCustomer</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="depart" role="tabpanel">
                        <div class="table-responsive">
                            <table class="table table-hover booking-table align-middle">
                                <thead>
                                    <tr>
                                        <th scope="col" style="width:60px;">STT</th>

                                        <th scope="col">KHÁCH HÀNG</th>
                                        <th scope="col">LOẠI PHÒNG</th>
                                        <th scope="col">SỐ PHÒNG</th>
                                        <th scope="col">NGÀY ĐẾN</th>
                                        <th scope="col">NGÀY ĐI</th>
                                        <th scope="col">LOẠI KHÁCH</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var b in Model.ListCheckOutToday.Select((value, index) => new { value, index }))
                                    {
                                        <tr>
                                            <td>@(b.index + 1)</td>
                                            <td>@b.value.NameCustomer</td>
                                            <td>@b.value.TypeRoom</td>
                                            <td>@b.value.NumberOfRoom</td>
                                            <td>@b.value.DayCheckIn.ToString("dd/MM/yyyy")</td>
                                            <td>@b.value.DayCheckOut.ToString("dd/MM/yyyy")</td>
                                            <td class="text-muted">@b.value.TypeCustomer</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="tab-pane fade show active" id="inuse" role="tabpanel">
                        <div class="table-responsive">
                            <table class="table table-hover booking-table align-middle">
                                <thead>
                                    <tr>
                                        <th scope="col" style="width:60px;">STT</th>

                                        <th scope="col">KHÁCH HÀNG</th>
                                        <th scope="col">LOẠI PHÒNG</th>
                                        <th scope="col">SỐ PHÒNG</th>
                                        <th scope="col">NGÀY ĐẾN</th>
                                        <th scope="col">NGÀY ĐI</th>
                                        <th scope="col">LOẠI KHÁCH</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var b in Model.ListCustomerUsing.Select((value, index) => new { value, index }))
                                    {
                                        <tr>
                                            <td>@(b.index + 1)</td>
                                            <td>@b.value.NameCustomer</td>
                                            <td>@b.value.TypeRoom</td>
                                            <td>@b.value.NumberOfRoom</td>
                                            <td>@b.value.DayCheckIn.ToString("dd/MM/yyyy")</td>
                                            <td>@b.value.DayCheckOut.ToString("dd/MM/yyyy")</td>
                                            <td class="text-muted">@b.value.TypeCustomer</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="mt-3 small text-muted">Ghi chú : Phạm Trung Đức </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
