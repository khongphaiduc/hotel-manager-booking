@{
    Layout = "~/Views/Shared/StaffHeader.cshtml";
}
@using System.Globalization
@using Management_Hotel_2025.ViewModel
@model IEnumerable<ViewRoomModel>
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý Phòng Khách sạn</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #2c3e50;
            --secondary-color: #3498db;
            --success-color: #27ae60;
            --warning-color: #f39c12;
            --danger-color: #e74c3c;
            --light-bg: #f8f9fa;
            --card-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        body {
            background: #f8f9fa;
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .main-container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            margin: 30px 0;
            overflow: hidden;
            padding-bottom: 2rem;
        }

        .filter-section {
            background: var(--light-bg);
            padding: 0.5rem 1rem 0.5rem 1rem;
            border-bottom: 1px solid #dee2e6;
        }

        .filter-card {
            background: white;
            border-radius: 10px;
            padding: 0.7rem 0.7rem 0.2rem 0.7rem;
            box-shadow: var(--card-shadow);
            border: none;
        }

        .form-label {
            font-size: 0.95rem;
            margin-bottom: 0.2rem;
        }

        .form-control, .form-select {
            border-radius: 8px;
            border: 2px solid #e9ecef;
            padding: 0.3rem 0.5rem;
            transition: border-color 0.3s, box-shadow 0.3s;
            font-size: 0.92rem;
            height: 30px;
        }

            .form-control[type="date"] {
                height: 30px;
            }

            .form-control:focus, .form-select:focus {
                border-color: var(--secondary-color);
                box-shadow: 0 0 0 0.15rem rgba(52, 152, 219, 0.08);
            }

        .btn-filter {
            background: var(--secondary-color);
            border: none;
            border-radius: 8px;
            padding: 0.32rem 0.7rem;
            font-weight: 500;
            font-size: 0.92rem;
            transition: background 0.3s, transform 0.3s;
        }

            .btn-filter:hover {
                background: #2980b9;
                transform: translateY(-2px);
            }

        .btn-reset {
            background: var(--warning-color);
            border: none;
            border-radius: 8px;
            padding: 0.32rem 0.7rem;
            font-weight: 500;
            font-size: 0.92rem;
            transition: background 0.3s, transform 0.3s;
        }

            .btn-reset:hover {
                background: #d68910;
                transform: translateY(-2px);
            }

        .rooms-container {
            padding: 2rem 2.5rem 1rem 2.5rem;
        }

        .room-card {
            background: white;
            border-radius: 12px;
            box-shadow: var(--card-shadow);
            transition: box-shadow 0.3s, transform 0.3s;
            border: none;
            overflow: hidden;
            margin-bottom: 1.5rem;
            min-height: 320px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .room-card:hover {
                transform: translateY(-5px) scale(1.025);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.13);
            }

        .room-image {
            height: 190px;
            background: linear-gradient(45deg, #f0f0f0, #e0e0e0);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            color: #bbb;
            overflow: hidden;
        }

        .room-info {
            padding: 1.2rem 1.2rem 0.5rem 1.2rem;
        }

        .room-number {
            font-size: 1.3rem;
            font-weight: bold;
            color: var(--primary-color);
            margin-bottom: 0.2rem;
        }

        .room-type {
            color: var(--secondary-color);
            font-weight: 500;
            margin-bottom: 0.6rem;
        }

        .status-badge {
            padding: 0.3rem 0.8rem;
            border-radius: 18px;
            font-size: 0.85rem;
            font-weight: 500;
            text-transform: uppercase;
            margin-bottom: 0.5rem;
        }

        .status-available {
            background: rgba(39, 174, 96, 0.13);
            color: var(--success-color);
            border: 1px solid rgba(39, 174, 96, 0.25);
        }

        .status-occupied {
            background: rgba(231, 76, 60, 0.13);
            color: var(--danger-color);
            border: 1px solid rgba(231, 76, 60, 0.25);
        }

        .status-maintenance {
            background: rgba(243, 156, 18, 0.13);
            color: var(--warning-color);
            border: 1px solid rgba(243, 156, 18, 0.25);
        }

        .room-features {
            margin-top: 0.5rem;
            font-size: 0.95rem;
        }

        .feature-icon {
            margin-right: 0.4rem;
            color: var(--secondary-color);
        }

        .room-actions {
            padding: 0.7rem 1.2rem;
            background: var(--light-bg);
            border-top: 1px solid #e9ecef;
            text-align: right;
        }

        .btn-action {
            margin-right: 0.35rem;
            border-radius: 6px;
            font-size: 0.875rem;
            padding: 0.38rem 1rem;
        }

        .stats-section {
            background: var(--light-bg);
            padding: 0.5rem 1rem 0.5rem 1rem;
            border-bottom: 1px solid #dee2e6;
        }

        .stat-card {
            background: white;
            border-radius: 10px;
            padding: 0.6rem 0.3rem;
            text-align: center;
            box-shadow: var(--card-shadow);
            margin-bottom: 0.5rem;
        }

        .stat-number {
            font-size: 1.1rem;
            font-weight: bold;
            margin-bottom: 0.1rem;
        }

        .stat-label {
            color: #6c757d;
            font-size: 0.8rem;
        }

        .no-results {
            text-align: center;
            padding: 2.5rem 1rem;
            color: #6c757d;
        }

        .fade-in {
            animation: fadeIn 0.4s ease-in;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(25px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@media (max-width: 1200px) {
            .rooms-container, .stats-section {
                padding-left: 1rem;
                padding-right: 1rem;
            }
        }

        .filter-card form .d-flex {
            gap: 10px;
        }

            .filter-card form .d-flex::-webkit-scrollbar {
                height: 6px;
            }

            .filter-card form .d-flex::-webkit-scrollbar-thumb {
                background: rgba(0,0,0,0.2);
                border-radius: 3px;
            }


        .no-results {
            text-align: center;
            padding: 3.5rem 1rem;
            color: #6c757d;
            background: linear-gradient(45deg, #f8f9fa 70%, #eaf6ff 100%);
            border-radius: 18px;
            box-shadow: 0 2px 16px rgba(52, 152, 219, 0.08);
            margin: 2rem 0;
            animation: fadeIn 0.5s;
        }

        .no-results-icon {
            font-size: 3.2rem;
            color: var(--secondary-color);
            margin-bottom: 1rem;
            display: block;
        }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- Filter Section -->
        <div class="filter-section">
            <div class="filter-card">
                <div class="d-flex flex-wrap align-items-end gap-3">
                    <!-- Form lọc phòng -->
                    <form id="lux-filter-form" method="get" asp-action="StaffViewListRoom" asp-controller="StaffManagementRoom" class="d-flex flex-wrap align-items-end gap-2 flex-grow-1" style="min-width:0;">
                        <div class="col-auto flex-fill" style="min-width:120px;">
                            <label class="form-label">Trạng thái</label>
                            <select name="option" class="form-select" onchange="resetPageAndSubmit()">
                                <option value="all">Tất cả</option>
                                <option value="Available" selected="@(ViewBag.option == "Available" ? "selected" : null)">Trống</option>
                                <option value="Success" selected="@(ViewBag.option == "Success" ? "selected" : null)">Đã thuê</option>
                                <option value="CheckIn" selected="@(ViewBag.option == "CheckIn" ? "selected" : null)">Đang sử dụng</option>
                                <option value="Maintenance" selected="@(ViewBag.option== "Maintenance" ? "selected" : null)">Đang dọn (đang update)</option>
                                <option value="Maintenance" selected="@(ViewBag.option== "Maintenance" ? "selected" : null)">Bảo trì</option>
                            </select>
                        </div>
                        <div class="col-auto flex-fill" style="min-width:120px;">
                            <label class="form-label">Tầng</label>
                            <select name="Floor" class="form-select" onchange="resetPageAndSubmit()">
                                <option value="">Tất cả</option>
                                @for (int i = 1; i <= 10; i++)
                                {
                                    <option value="@i" selected="@(ViewBag.Floor == i ? "selected" : null)">Tầng @i</option>
                                }
                            </select>
                        </div>
                        <div class="col-auto flex-fill" style="min-width:130px;">
                            <label class="form-label">Ngày bắt đầu</label>
                            <input type="date" class="form-control" name="StartDate" value="@ViewBag.StartDate" onchange="resetPageAndSubmit()">
                        </div>
                        <div class="col-auto flex-fill" style="min-width:130px;">
                            <label class="form-label">Ngày kết thúc</label>
                            <input type="date" class="form-control" value="@ViewBag.EndDate" name="EndDate" onchange="resetPageAndSubmit()">
                        </div>
                        <button type="button" class="btn btn-reset text-white flex-fill" onclick="resetOption()">
                            <i class="fas fa-undo me-1"></i>Reset
                        </button>

                    </form>
                    <!-- Form tìm kiếm ID khách hàng -->
                    <form id="search-customer-form" method="get" asp-action="StaffSearchByIdRoom" asp-controller="StaffManagementRoom" class="d-flex align-items-end ms-auto" style="min-width:280px;">
                        <div class="col-auto flex-fill" style="min-width:140px;">
                            <label class="form-label">Tìm  theo số phòng,id</label>
                            <input type="text" class="form-control" name="IdRoom" placeholder="Tìm kiếm...">
                        </div>
                        <button type="submit" class="btn btn-filter text-white ms-2">
                            <i class="fas fa-search me-1"></i>Tìm kiếm
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Stats Section -->
        <div class="stats-section">
            <div class="row g-3">
                <div class="col-lg-3 col-md-6 col-6">
                    <div class="stat-card">
                        <div class="stat-number text-primary">9</div>
                        <div class="stat-label">Tổng số phòng</div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-6">
                    <div class="stat-card">
                        <div class="stat-number text-success">5</div>
                        <div class="stat-label">Phòng trống</div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-6">
                    <div class="stat-card">
                        <div class="stat-number text-danger">3</div>
                        <div class="stat-label">Đã thuê</div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-6">
                    <div class="stat-card">
                        <div class="stat-number text-warning">1</div>
                        <div class="stat-label">Bảo trì</div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Rooms Container -->
        <div class="rooms-container">
            <div class="row">





                @if (Model.Count() == 0 || Model.Any(s => s.NumberOfRooms == null))
                {
                    <div class="col-12">
                        <div class="no-results fade-in">
                            <span class="no-results-icon">
                                <i class="fas fa-search-minus"></i>
                            </span>
                            <h4>Không tìm thấy kết quả phù hợp</h4>
                            <p>Vui lòng kiểm tra lại bộ lọc hoặc thử tìm kiếm với thông tin khác.</p>
                        </div>
                    </div>
                }
                else
                {
                    @foreach (var room in Model)
                    {
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3 fade-in">
                            <div class="room-card h-100 d-flex flex-column">
                                <div class="room-image">
                                    @if (!string.IsNullOrEmpty(room.Name))
                                    {
                                        <img src="@room.Image" alt="Phòng @room.Floor" style="width:100%;height:100%;object-fit:cover;border-radius:10px;">
                                    }
                                    else
                                    {
                                        <i class="fas fa-bed"></i>
                                    }
                                </div>
                                <div class="room-info flex-grow-1">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <div class="room-number">Phòng @room.NumberOfRooms</div>
                                            <div class="room-type">@room.Name</div>
                                        </div>
                                    </div>
                                    <div class="mt-2 mb-1">
                                        <strong class="text-primary">
                                            @room.Price.ToString("C0", CultureInfo.GetCultureInfo("vi-VN")) / đêm
                                        </strong>
                                    </div>
                                    <div class="room-features">
                                        @* @foreach (var feature in room.features) *@
                                        @* { *@
                                        @*     <span class="me-2 mb-1 d-inline-block"><i class="fas fa-check feature-icon"></i>@feature</span> *@
                                        @* } *@
                                    </div>
                                    <div class="mt-1"><small class="text-muted"><i class="fas fa-user me-1"></i>Khách:@room.NamePasssger</small></div>
                                    <div class="mt-1"><small class="text-muted"><i class="fas fa-calendar me-1"></i>Ngày: bắt đầu</small></div>
                                    <div class="mt-1"><small class="text-muted"><i class="fas fa-calendar me-1"></i>Ngày: ngày kết thúc</small></div>
                                </div>
                                <div class="room-actions">
                                    <a class="btn btn-success btn-sm btn-action" style="opacity:1;" target="_blank" asp-controller="StaffManagementRoom" asp-action="CheckInPassengers">
                                        <i class="fas fa-plus me-1">   </i>Check-in
                                    </a>
                                    <a class="btn btn-warning btn-sm btn-action" style="opacity:1;" target="_blank"
                                       asp-controller="StaffManagementRoom"
                                       asp-action="ViewCalenderBookingOfRoom"
                                       asp-route-NumberRoom="@room.NumberOfRooms"
                                       asp-route-IdRoom="@room.IdRoom">
                                        Lịch
                                    </a>
                                    <a class="btn btn-warning btn-sm btn-action" asp-action="ViewDetailRoomVer2"
                                       asp-controller="ManagementRoom"
                                       asp-route-idRoom="@room.IdRoom" class="lux-book-btn" target="_blank" style="text-decoration:none">
                                        Xem chi tiết phòng
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
    <script>
        function resetPageAndSubmit() {
            document.getElementById("lux-filter-form").submit();
        }
        function resetOption() {
             document.querySelector('[name="option"]').value = "";
            document.querySelector('[name="Floor"]').value = "";
            document.querySelector('[name="StartDate"]').value = "";
            document.querySelector('[name="EndDate"]').value = "";
            document.getElementById("lux-filter-form").submit();
        }
    </script>
</body>
</html>