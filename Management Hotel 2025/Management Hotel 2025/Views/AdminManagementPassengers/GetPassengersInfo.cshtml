<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        body {
            background: #f5f7fa;
            padding: 40px 0;
        }

        .profile-wrapper {
            max-width: 820px;
            margin: 0 auto;
        }

        .profile-header {
            background: linear-gradient(135deg, #4e73df, #224abe);
            border-radius: 18px;
            padding: 40px 25px;
            color: white;
            display: flex;
            align-items: center;
            gap: 30px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.07);
        }

            .profile-header img, .avatar-default {
                width: 150px;
                height: 150px;
                border-radius: 50%;
                border: 5px solid rgba(255,255,255,0.4);
                object-fit: cover;
            }

        .avatar-default {
            background: rgba(255,255,255,0.3);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 70px;
            color: white;
        }

        .profile-name {
            font-size: 2rem;
            font-weight: 600;
            margin-bottom: 5px;
        }

        .profile-card {
            margin-top: 30px;
            padding: 30px;
            background: white;
            border-radius: 16px;
            box-shadow: 0 3px 15px rgba(0,0,0,0.08);
        }

        .info-row {
            display: flex;
            padding: 16px 0;
            border-bottom: 1px solid #e7e7e7;
        }

            .info-row:last-child {
                border-bottom: none;
            }

        .info-label {
            width: 180px;
            font-weight: 600;
            color: #555;
        }

        .info-value {
            flex: 1;
            color: #222;
            font-size: 1.05rem;
        }
    </style>
</head>
@{
    Layout = "~/Views/Shared/AdminSidebar.cshtml";
}

<body>

    <div class="profile-wrapper">
        <div class="profile-header">
            <!-- Avatar -->
            @if (!string.IsNullOrEmpty(Model.UrlImage))
            {
                <img src="@Model.UrlImage" alt="Avatar" />
            }
            else
            {
                <div class="avatar-default">
                    <i class="bi bi-person"></i>
                </div>
            }

            <!-- Name -->
            <div>
                <div class="profile-name">@Model.FullName</div>
                <div>Mã hành khách: <strong>@Model.PassengerCode</strong></div>
            </div>
        </div>

        <div class="profile-card">
            <div class="info-row">
                <div class="info-label">Tên:</div>
                <div class="info-value">@Model.Name</div>
            </div>

            <div class="info-row">
                <div class="info-label">Số điện thoại:</div>
                <div class="info-value">@Model.Phone</div>
            </div>

            <div class="info-row">
                <div class="info-label">Email:</div>
                <div class="info-value">@Model.Email</div>
            </div>

            <div class="info-row">
                <div class="info-label">Địa chỉ:</div>
                <div class="info-value">@Model.Address</div>
            </div>

            <div class="info-row">
                <div class="info-label">Ngày sinh:</div>
                <div class="info-value">@Model.Bithday?.ToString("dd/MM/yyyy")</div>
            </div>

            <div class="info-row">
                <div class="info-label">Giới tính:</div>
                <div class="info-value">@Model.Sex</div>
            </div>

            <div class="info-row">
                <div class="info-label">Quốc tịch:</div>
                <div class="info-value">@Model.Nationality</div>
            </div>
        </div>
    </div>

</body>
</html>
