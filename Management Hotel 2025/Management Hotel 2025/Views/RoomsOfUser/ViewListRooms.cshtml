@model IEnumerable<Management_Hotel_2025.Modules.Rooms.RoomViewModel.ViewListRoomsOfUser>
@{
    ViewBag.Title = "Danh sách phòng đã đặt";
    Layout = null;
    var rooms = new List<dynamic> {
    new { RoomNumber = "101", RoomType = "Deluxe", ImageUrl = "https://housedesign.vn/wp-content/uploads/2020/03/thiet-ke-noi-that-khach-san-5-sao.jpg", Price = 1200000, GuestCount = 2, CheckIn = "2025-09-20", CheckOut = "2025-09-23", Status = "Đã nhận phòng", Services = "Ăn sáng, Wifi, Hồ bơi", Note = "Yêu cầu tầng cao" },
    new { RoomNumber = "202", RoomType = "Suite", ImageUrl = "https://housedesign.vn/wp-content/uploads/2020/08/phong-cach-thiet-ke-noi-that-luxury-768x576.jpg", Price = 1800000, GuestCount = 3, CheckIn = "2025-09-25", CheckOut = "2025-09-28", Status = "Đang chờ", Services = "Ăn sáng, Đưa đón sân bay, Spa", Note = "" },
    new { RoomNumber = "303", RoomType = "Standard", ImageUrl = "https://housedesign.vn/wp-content/uploads/2020/08/phong-cach-thiet-ke-noi-that-luxury-768x576.jpg", Price = 900000, GuestCount = 1, CheckIn = "2025-10-01", CheckOut = "2025-10-03", Status = "Đã xác chờ", Services = "Wifi", Note = "Phòng không hút thuốc" }
};
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="~/css/ViewListRoomsOfUser.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/ViewListRoomsOfUser.js"></script>

<div class="container my-5">
    <h2 class="mb-4 text-center fw-bold text-gradient">Danh sách phòng bạn đã đặt</h2>
    <div class="row mb-4">
        <div class="col-md-6 mx-auto">
            <input type="text" class="form-control" id="roomSearch" placeholder="Tìm kiếm theo số phòng, loại phòng, dịch vụ...">
        </div>
    </div>
    <div id="roomList">

     

        @foreach (var room in Model)
        {
            <div class="room-card-horizontal mb-3 p-2"
               >
                <div class="row g-0 align-items-center">
                    <div class="col-md-3">
                        <img src="@room.ImageRoom" class="img-fluid rounded-start room-img-horizontal" alt="Ảnh phòng @room.TypeRoom">
                    </div>
                    <div class="col-md-6 px-3">
                        <h5 class="fw-bold text-primary">@room.TypeRoom  Phòng @room.NumberRoom</h5>
                        <div class="mb-1">
                            <span class="badge bg-info"> Trạng thái : @room.StatusRoom</span>
                        </div>
                        <ul class="list-unstyled mb-2 small">
                            <li><strong>Giá phòng:</strong> <span class="text-danger">@(room.PriceRoom.HasValue ? room.PriceRoom.Value.ToString("N0") : "0") VNĐ/đêm</span></li>
                         
                            <li><strong>Ngày nhận phòng dự kiến:</strong> @room.DateCheckIn</li>
                            <li><strong>Ngày trả phòng dự kiến:</strong> @room.DateCheckout</li>
                            <li><strong>Mô Tả:</strong> @room.DescriptionRoom</li>
                          
                        </ul>
                    </div>

                    <div class="col-md-3 text-end d-flex flex-column align-items-end justify-content-center">
                        <button class="btn btn-outline-primary btn-sm mb-2"
                                onclick="showRoomDetail('@room.Floor', '@room.TypeRoom', '@room.ImageRoom', '@room.PriceRoom', '@room.NameRoom', '@room.DateCheckIn', '@room.DateCheckout', '@room.StatusRoom', '@room.StatusRoom', '@room.DescriptionRoom')">
                            Xem chi tiết
                        </button>
                        <button class="btn btn-outline-primary btn-sm mb-2"
                                onclick="showRoomDetail('@room.Floor', '@room.TypeRoom', '@room.ImageRoom', '@room.PriceRoom', '@room.NameRoom', '@room.DateCheckIn', '@room.DateCheckout', '@room.StatusRoom', '@room.StatusRoom', '@room.DescriptionRoom')">
                           Hủy Đặt Phòng
                        </button>
                    </div>
                    


                </div>
            </div>
        }

    </div>
</div>

<div class="modal fade" id="roomDetailModal" tabindex="-1" aria-labelledby="roomDetailLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="roomDetailLabel">Chi tiết phòng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body" id="roomDetailBody"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>