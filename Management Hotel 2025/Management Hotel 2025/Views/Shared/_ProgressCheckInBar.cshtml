@model int

<div class="progress-wrapper small">
    <div class="progress-bar-custom">
        <div class="progress-line"></div>
        <div class="progress-steps">
            <div class="step @(Model >= 1 ? "active" : "")">
                <div class="circle">1</div>
                <span>Nhập thông tin khách</span>
            </div>
            <div class="step @(Model >= 2 ? "active" : "")">
                <div class="circle">2</div>
                <span>Xác định hành khách</span>
            </div>
            <div class="step @(Model >= 3 ? "active" : "")">
                <div class="circle">3</div>
                <span>Hoàn tất thông tin</span>
            </div>
        </div>
    </div>
</div>

<style>
    .progress-wrapper.small {
        width: 100%;
        padding: 15px 0;
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        display: flex;
        justify-content: center;
        align-items: center;
        border-bottom: 1.5px solid #dee2e6;
    }

    .progress-bar-custom {
        position: relative;
        width: 70%;
        max-width: 600px;
    }

    .progress-line {
        position: absolute;
        top: 16px;
        left: 0;
        width: 100%;
        height: 3px;
        background: #dee2e6;
        border-radius: 2px;
        z-index: 1;
        overflow: hidden;
    }

        .progress-line::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            width: calc((@Model - 1) / 2 * 100%);
            background: linear-gradient(90deg, #007bff, #0dcaf0);
            transition: width 0.6s ease-in-out;
            border-radius: 2px;
            z-index: 2;
        }

    .progress-steps {
        display: flex;
        justify-content: space-between;
        position: relative;
        z-index: 3;
    }

    .step {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        width: 33%;
    }

    .circle {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background: #dee2e6;
        color: #495057;
        display: flex;
        justify-content: center;
        align-items: center;
        font-weight: 600;
        font-size: 13px;
        transition: all 0.4s ease;
        position: relative;
        z-index: 5;
    }

    .step.active .circle {
        background: linear-gradient(135deg, #007bff, #0dcaf0);
        color: white;
        box-shadow: 0 0 8px rgba(13, 110, 253, 0.6);
        transform: scale(1.1);
    }

    .step span {
        margin-top: 5px;
        font-size: 12px;
        color: #6c757d;
        font-weight: 500;
        transition: color 0.4s;
    }

    .step.active span {
        color: #007bff;
        font-weight: 600;
    }

    .step.active .circle::after {
        content: "";
        position: absolute;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: radial-gradient(rgba(13, 110, 253, 0.3), transparent 70%);
        z-index: 0;
        animation: pulse 1.8s infinite ease-in-out;
    }

    @@keyframes pulse {
        0%

    {
        transform: scale(0.9);
        opacity: 0.7;
    }

    50% {
        transform: scale(1.1);
        opacity: 0.4;
    }

    100% {
        transform: scale(0.9);
        opacity: 0.7;
    }

    }

    @@media (max-width: 600px) {
        .circle

    {
        width: 26px;
        height: 26px;
        font-size: 11px;
    }

    .step span {
        font-size: 10.5px;
    }

    .progress-bar-custom {
        width: 90%;
    }

    }
</style>
