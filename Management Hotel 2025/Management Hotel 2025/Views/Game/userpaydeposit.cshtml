@{
    ViewData["Title"] = "Nạp Tiền";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5" style="max-width: 450px;">
    <div class="card shadow-lg p-4">
        <h3 class="text-center mb-4">💰 Nạp Tiền Tài Khoản</h3>

        <form id="depositForm">
            <div class="mb-3">
                <label for="amount" class="form-label">Nhập số tiền muốn nạp (VND)</label>
                <input type="number" class="form-control form-control-lg" id="amount" placeholder="Ví dụ: 50000" required min="1000" />
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100">
                Nạp Tiền
            </button>
        </form>
    </div>

    <div id="msg" class="text-center mt-3"></div>
</div>

<script>
    document.getElementById("depositForm").addEventListener("submit", async function (e) {
        e.preventDefault();

        const amount = document.getElementById("amount").value;

        if (!amount || amount < 1000) {
            document.getElementById("msg").innerHTML = "<span class='text-danger'>Số tiền tối thiểu là 1.000đ</span>";
            return;
        }

        const payload = {
            amount: parseInt(amount),
            returnUrl: window.location.origin + "/game/success",
            cancelUrl: window.location.origin + "/game/cancel"
        };

        const res = await fetch("/game/create", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(payload)
        });

        const data = await res.json();

        if (data.success) {
            window.location.href = data.checkoutUrl; // ✅ redirect PayOS
        } else {
            document.getElementById("msg").innerHTML = `<span class='text-danger'>${data.message}</span>`;
        }
    });
</script>
