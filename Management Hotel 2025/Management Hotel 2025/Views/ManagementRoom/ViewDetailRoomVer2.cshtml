@{
    Layout = null;
}
@model Management_Hotel_2025.ViewModel.ViewDetailRoom

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Chi tiết phòng ngủ @Model.RoomNumber</title>
    <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&display=swap" rel="stylesheet">
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Google Fonts Montserrat -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700;800&display=swap" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/roomdetail.css" />
    <!-- AOS CSS for animate on scroll -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" />


    <style>
        .intro-title {
            font-family: 'Great Vibes', cursive; /* chữ bay bổng mềm mại */
            font-size: 2.5rem; /* chữ to hơn */
            color: #8e44ad; /* tím sang trọng */
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1); /* bóng mờ nhẹ */
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row g-4">
            <div class="col-md-6">
                <div id="roomCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @for (int i = 0; i < Model.ListPathImage.Count; i++)
                        {
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <img src="@Model.ListPathImage[i]" class="d-block w-100 rounded" alt="Phòng ngủ">
                            </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#roomCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#roomCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </button>
                </div>
            </div>
            <div class="col-md-6">
                <h2 class="mb-3">@Model.NameType</h2>
                <h5 class="text-muted">Khách sạn TrungDuc Luxury , Tầng @Model.Floor, Phòng :@Model.RoomNumber</h5>
                <div class="mb-3">
                    <span class="badge bg-success">Còn phòng</span>
                    <span class="badge bg-primary">Miễn phí bữa sáng</span>
                </div>
                <div class="mb-3">
                    <h4 class="text-danger">@String.Format("{0:N0}", Model.Price) VNĐ / đêm</h4>
                </div>
                <ul class="list-unstyled mb-4">
                    <li><i class="bi bi-arrows-angle-expand"></i> Diện tích: 35m²</li>
                    <li><i class="bi bi-person"></i> Sức chứa: @Model.MaxGuests người</li>
                    <li><i class="bi bi-wifi"></i> Wifi miễn phí</li>
                    <li><i class="bi bi-tv"></i> TV thông minh</li>
                    <li><i class="bi bi-cup-hot"></i> Máy pha cà phê</li>
                    <li><i class="bi bi-bathtub"></i>🛁 Bồn tắm</li>
                </ul>
                <a class="btn btn-warning btn-lg w-100 mb-2" asp-action="InformationBooking"
                   asp-controller="Payment"
                   asp-route-Amount="@Model.Price"
                   asp-route-NameRoom="@Model.NameType"
                   asp-route-IdRoom="@Model.RoomId"
                   class="btn-primary" style="text-decoration-line:none">Đặt phòng ngay</a>
                <button class="btn btn-outline-secondary w-100" onclick="window.history.back()">Quay lại</button>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-12">
                <div class="intro-card">
                    <h4 class="intro-title">Giới thiệu</h4>
                    <p>@Model.Description</p>
                    <p>
                        Phòng Deluxe King được thiết kế sang trọng, hiện đại, phù hợp cho các cặp đôi hoặc gia đình nhỏ. View hướng ra thành phố, trang bị đầy đủ tiện nghi, đảm bảo mang lại trải nghiệm nghỉ dưỡng tuyệt vời nhất.
                    </p>
                    <h4 class="intro-title">Tiện ích nổi bật dành cho quý khách</h4>
                    <ul>
                        @for (int i = 0; i < Model.ListAmenites.Count; i++)
                        {
                            var amenity = Model.ListAmenites.ElementAt(i); // Nếu là ICollection, dùng ElementAt
                            bool isImageLeft = i % 2 == 0;
                            <section class="amenity-feature my-5 py-4">
                                <div class="row align-items-center g-4 flex-column-reverse flex-md-row @(isImageLeft ? "" : "flex-md-row-reverse")">
                                    <div class="col-md-6">
                                        <h3 class="fw-bold mb-3 text-primary">@amenity.Name</h3>
                                        <p class="lead mb-0">@amenity.Description</p>
                                    </div>
                                    <div class="col-md-6 text-center"
                                         data-aos="fade-@((isImageLeft ? "left" : "right"))">
                                        <img src="@amenity.UrlImage" alt="@amenity.Name" class="amenity-feature-img img-fluid rounded-4 shadow-lg" />
                                    </div>
                                </div>
                            </section>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AOS JS for animate on scroll -->
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 2000,
            once: true
        });
    </script>
</body>
</html>