@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Hotel Admin</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icon -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- CSS tùy chỉnh -->
    <link href="~/css/admin-sidebar.css" rel="stylesheet" />
</head>
<body>
    <div class="d-flex">

        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar">
            <div class="sidebar-header text-center py-4">
                <h4>Hotel Admin</h4>
            </div>

            <ul class="list-unstyled components">
                <li><a asp-controller="Admin" asp-action="AdminHomePage"> </i> <span>Trang chủ</span></a></li>
                <li><a href="#"></i> <span>Quản lý đặt phòng</span></a></li>
                <li><a href="#"><i class="bi bi-box-seam"></i> <span>Quản lý dịch vụ</span></a></li>
                <li><a href="#"><i class="bi bi-people"></i> <span>Quản lý khách hàng</span></a></li>
                <li><a href="#"><i class="bi bi-receipt"></i> <span>Hóa đơn & Thanh toán</span></a></li>
                <li><a href="#"><i class="bi bi-person-workspace"></i> <span>Quản lý nhân viên</span></a></li>
                <li><a href="#"><i class="bi bi-bar-chart"></i> <span>Báo cáo & thống kê</span></a></li>
                <li><a href="#"><i class="bi bi-gear"></i> <span>Cài đặt hệ thống</span></a></li>
                <li><a href="#"><i class="bi bi-bell"></i> <span>Cài đặt thông báo</span></a></li>
                <li><a href="#"><i class="bi bi-controller"></i> <span>Game</span></a></li>
                <li class="logout"><a href="#"><i class="bi bi-box-arrow-right"></i> <span>Đăng xuất</span></a></li>
            </ul>
        </nav>

        <!-- Nút Toggle Hamburger -->
        <button class="btn btn-dark toggle-btn" id="toggleBtn">
            <i class="bi bi-list"></i>
        </button>

        <!-- Nội dung chính -->
        <div class="content">
            @RenderBody()
        </div>

    </div>

    <script>
        // Toggle sidebar
        document.getElementById("toggleBtn").onclick = function () {
            document.getElementById("sidebar").classList.toggle("collapsed");
            document.querySelector(".content").classList.toggle("collapsed");
        }
    </script>

</body>
</html>
