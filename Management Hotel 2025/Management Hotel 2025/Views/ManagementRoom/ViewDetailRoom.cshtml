@{

    Layout = null;
}

@model Management_Hotel_2025.ViewModel.ViewDetailRoom
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Chi tiết phòng - @Model.NameType</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/ViewDetailRoom.css" />
</head>
<body>
    <div class="room-slider-bg">
        <div class="room-slider-container">
            <!-- Nửa trên: slider ảnh -->
            <div class="room-slider-half room-slider-half-top">
                <div class="slider-wrapper">
                    <img id="mainSliderImg" src="@Model.PathImage" alt="Ảnh Room"
                         class="slider-img" />
                    <div class="slider-controls">
                        <button class="slider-btn prev-btn" onclick="changeSlide(-1)">&#10094;</button>
                        <button class="slider-btn next-btn" onclick="changeSlide(1)">&#10095;</button>
                    </div>
                    <div class="slider-dots" id="sliderDots">
                    </div>
                </div>
            </div>
            <!-- Nửa dưới: chi tiết phòng -->
            <div class="room-slider-half room-slider-half-bottom">
                <div class="room-detail-info">
                    <h1 class="room-title">@Model.NameType</h1>
                    <div class="room-price">  @string.Format("{0:N0}", Model.Price)</div>
                    <div class="room-desc">@Model.Description</div>
                    <ul class="room-features">
                        @* @foreach (var f in room.Features)
                        {
                            <li>
                                <span class="feature-dot"></span>
                                @f
                            </li>
                        } *@
                        <li>
                            <span class="feature-dot"></span>
                            @Model.Description
                        </li>

                    </ul>
                    <div class="room-detail-actions">

                        <a asp-action="InformationBooking"
                           asp-controller="Payment"
                           asp-route-Amount="@Model.Price"
                           asp-route-NameRoom="@Model.NameType"

                           class="btn-primary">Đặt phòng ngay</a>

                        <a class="btn-primary">Thêm vào giỏ hàng</a>
                        <button class="btn-outline" onclick="window.history.back()">Quay lại</button>
                    </div>
                </div>
            </div>
        </div>
        <div id="lux-modal" class="lux-modal">
            <div class="lux-modal-content">
                <span class="lux-modal-close" onclick="luxCloseModal()">&times;</span>
                <h2>Đặt phòng thành công!</h2>
                <p>Cảm ơn bạn đã chọn <span id="lux-modal-room"></span>.<br />Chúng tôi sẽ liên hệ với bạn sớm nhất.</p>
            </div>
        </div>
    </div>
    <script src="~/js/ViewDetailRoom.js"></script>
</body>
</html>