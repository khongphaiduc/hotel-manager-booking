@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Hotel Admin</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="~/css/admin-sidebar.css" rel="stylesheet" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="d-flex">

        <nav id="sidebar" class="sidebar">
            <div class="sidebar-header text-center py-4">
                <h4>Hotel Admin</h4>
            </div>

            <ul class="list-unstyled components">
                <li>
                    <a asp-controller="Admin" asp-action="AdminHomePage"
                       class="@(ViewContext.RouteData.Values["action"].ToString() == "AdminHomePage" ? "active" : "")">
                        <i class="bi bi-house"></i> <span>Trang chủ</span>
                    </a>
                </li>

                <li>
                    <a asp-controller="Admin" asp-action="AdminManagementRoom"
                       class="@(ViewContext.RouteData.Values["action"].ToString() == "AdminManagementRoom" ? "active" : "")">
                        <i class="bi bi-door-open"></i> <span>Quản lý phòng</span>
                    </a>
                </li>

                <li>
                    <a asp-controller="ManagementAmenity" asp-action="ViewListAmentity"
                       class="@(ViewContext.RouteData.Values["action"].ToString() == "ViewListAmentity" ? "active" : "")">
                        <i class="bi bi-box-seam"></i> <span>Quản lý tiện ích</span>
                    </a>
                </li>

                <li>
                    <a asp-controller="AdminManagementPassengers" asp-action="ViewListPassenger"
                       class="@(ViewContext.RouteData.Values["action"].ToString() == "ViewListPassenger" ? "active" : "")">
                        <i class="bi bi-box-seam"></i> <span>Quản lý khách hàng</span>
                    </a>
                </li>


                <li><a href="#"><i class="bi bi-receipt"></i> <span>Hóa đơn & Thanh toán</span></a></li>
                <li><a href="#"><i class="bi bi-person-workspace"></i> <span>Quản lý nhân viên</span></a></li>
                <li><a href="#"><i class="bi bi-bar-chart"></i> <span>Báo cáo & thống kê</span></a></li>
                <li><a href="#"><i class="bi bi-gear"></i> <span>Cài đặt hệ thống</span></a></li>
                <li><a href="#"><i class="bi bi-bell"></i> <span>Cài đặt thông báo</span></a></li>
                <li><a href="#"><i class="bi bi-controller"></i> <span>Game</span></a></li>

                <li class="logout">
                    <a asp-controller="Authen" asp-action="SignOut"><i class="bi bi-box-arrow-right"></i> <span>Đăng xuất</span></a>
                </li>
            </ul>
        </nav>

        <button class="btn btn-dark toggle-btn" id="toggleBtn">
            <i class="bi bi-list"></i>
        </button>

        <div class="content">
            @RenderBody()
        </div>

    </div>

    <script>
        document.getElementById("toggleBtn").onclick = function () {
            document.getElementById("sidebar").classList.toggle("collapsed");
            document.querySelector(".content").classList.toggle("collapsed");
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>