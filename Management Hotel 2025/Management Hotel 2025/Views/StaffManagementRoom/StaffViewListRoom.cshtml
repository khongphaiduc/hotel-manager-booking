<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Quản Lý Phòng Khách Sạn</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- FontAwesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/css/StaffViewListRoom.css" rel="stylesheet" />
</head>
<body>
    <div class="hotel-bg">
        <div class="container-fluid px-0 py-4">
            <!-- Bộ lọc & Tìm kiếm -->
            <form class="filter-bar d-flex flex-wrap align-items-center gap-3 mb-4 justify-content-center" method="get">
                <div>
                    <label class="me-1 fw-semibold">Giá từ:</label>
                    <input type="number" class="form-control form-control-sm d-inline-block" name="minPrice" style="width:90px;" min="0" placeholder="Min" />
                </div>
                <div>
                    <label class="me-1 fw-semibold">Đến:</label>
                    <input type="number" class="form-control form-control-sm d-inline-block" name="maxPrice" style="width:90px;" min="0" placeholder="Max" />
                </div>
                <div>
                    <label class="me-1 fw-semibold">Tầng:</label>
                    <select class="form-select form-select-sm" name="filterTang" style="width:90px;">
                        <option value="">Tất cả</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                    </select>
                </div>
                <div>
                    <label class="me-1 fw-semibold">Loại phòng:</label>
                    <select class="form-select form-select-sm" name="filterLoai" style="width:120px;">
                        <option value="">Tất cả</option>
                        <option value="Standard">Standard</option>
                        <option value="Deluxe">Deluxe</option>
                        <option value="Suite">Suite</option>
                    </select>
                </div>
                <div>
                    <label class="fw-semibold me-2">Trạng thái:</label>
                    <select class="form-select form-select-sm" name="filterTrangThai" style="width:130px;">
                        <option value="">Tất cả</option>
                        <option value="trong">Trống</option>
                        <option value="o">Đang ở</option>
                        <option value="dattruoc">Đặt trước</option>
                        <option value="dangdon">Đang dọn</option>
                        <option value="baotri">Bảo trì</option>
                    </select>
                </div>
                <div class="search-box d-flex align-items-center gap-2">
                    <input class="form-control form-control-sm" type="text" name="searchCustomer" placeholder="Tìm tên khách..." style="width:150px;" />
                    <input class="form-control form-control-sm" type="text" name="searchRoom" placeholder="Tìm số phòng..." style="width:120px;" />
                </div>
                <div>
                    <button class="btn btn-success btn-sm" type="submit"><i class="fa fa-filter"></i> Lọc</button>
                </div>
            </form>
            <!-- Grid phòng -->
            <div class="room-grid-custom">
                @for (int i = 0; i < 10; i++)
                {
                    <div class="card card-room card-modern">
                        <div class="card-body d-flex flex-column justify-content-between h-100">
                            <div>
                                <div class="d-flex align-items-center mb-2">
                                    <span class="fs-5 fw-bold me-2 text-primary"><i class="fa fa-circle text-secondary"></i> 10@(i + 1)</span>
                                    <span class="badge bg-light text-dark ms-auto">Standard</span>
                                </div>
                                <div class="mb-1"><strong>Giá:</strong> 500,000đ</div>
                                <div class="mb-1"><strong>Tầng:</strong> @(i % 4 + 1)</div>
                                <div class="mb-1"><strong>Trạng thái:</strong> <span class="text-muted">Trống</span></div>
                                <div class="mb-1"><strong>Khách:</strong> <span class="text-muted">-</span></div>
                                <div class="mb-1"><strong>Check-in:</strong> <span class="text-muted">-</span></div>
                                <div class="mb-1"><strong>Check-out:</strong> <span class="text-muted">-</span></div>
                            </div>
                            <div class="room-action mt-3">
                                <button class="btn btn-outline-primary btn-sm rounded-pill px-3"><i class="fa fa-eye"></i> Xem chi tiết</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>