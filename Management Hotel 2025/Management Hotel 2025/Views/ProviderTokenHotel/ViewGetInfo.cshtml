@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title> Token API - Trung Duc Luxury Hotel</title>
    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <!-- File CSS riêng -->
    <link href="~/css/ViewTokenInfo.css" rel="stylesheet">
</head>
<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-7 col-md-9">
                <div class="card p-4">
                    <h2 class="mb-4 text-center"><i class="bi bi-key-fill"></i> Cấp Token API - Quản lý Khách sạn</h2>
                    <form id="tokenForm">
                        <div class="mb-3">
                            <label for="username" class="form-label">Tên người dùng / Email</label>
                            <input type="text" class="form-control" id="username" required placeholder="Nhập tên hoặc email">
                        </div>
                        <div class="mb-3">
                            <label for="audience" class="form-label">Audience <span class="text-muted">(Đối tượng sử dụng token)</span></label>
                            <input type="text" class="form-control" id="audience" required placeholder="Ví dụ: MobileApp, Lễ tân, Khách VIP...">
                        </div>
                        <div class="mb-3">
                            <label for="desc" class="form-label">Mô tả</label>
                            <input type="text" class="form-control" id="desc" placeholder="Ghi chú...">
                        </div>
                        <div class="mb-3">
                            <label for="expiry" class="form-label">Hạn sử dụng</label>
                            <input type="date" class="form-control" id="expiry">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Quyền truy cập</label>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="read_rooms" id="scope-read_rooms">
                                        <label class="form-check-label" for="scope-read_rooms">
                                            <i class="bi bi-door-open"></i> Xem thông tin phòng
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="book_rooms" id="scope-book_rooms">
                                        <label class="form-check-label" for="scope-book_rooms">
                                            <i class="bi bi-calendar-plus"></i> Đặt phòng
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="manage_customers" id="scope-manage_customers">
                                        <label class="form-check-label" for="scope-manage_customers">
                                            <i class="bi bi-person-badge"></i> Xem danh sách phòng
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="view_reports" id="scope-view_reports">
                                        <label class="form-check-label" for="scope-view_reports">
                                            <i class="bi bi-bar-chart-line"></i> Hủy Đặt Phòng
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="manage_services" id="scope-manage_services">
                                        <label class="form-check-label" for="scope-manage_services">
                                            <i class="bi bi-cone-striped"></i> Thanh Toán
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="admin" id="scope-admin">
                                        <label class="form-check-label" for="scope-admin">
                                            <i class="bi bi-gear-fill"></i> Support
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg px-5" id="btnCreate">
                                <i class="bi bi-magic"></i> Tạo token
                            </button>
                        </div>
                    </form>
                    <div id="tokenResult" class="token-box" style="display:none;"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- File JS riêng -->
    <script src="~/js/ViewTokenInfo.js"></script>
</body>
</html>