@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Luxury Hotel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="@Url.Content("~/css/Header.css")" asp-append-version="true" />
    @RenderSection("Head", required: false)
</head>
<body>
    <!-- Header mới hiện đại, sáng và bo góc -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow modern-header px-3 py-2">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index", "Home")">
                <img src="https://i.ytimg.com/vi/ptDXS9XYmvI/maxresdefault.jpg" alt="Luxury Hotel" width="44" height="44" class="logo-img me-2" />
                <span class="fs-4 fw-bold text-gradient">TrungDucLuxury Hotel</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavNew" aria-controls="mainNavNew" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNavNew">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link modern-nav-link active" href="@Url.Action("Index", "Home")">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link modern-nav-link" asp-controller="ManagementRoom" asp-action="ChosseDate">Đặt Phòng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link modern-nav-link" href="/contact">Liên hệ</a>
                    </li>
                    @if (User?.Identity?.IsAuthenticated == true &&
                    (User.IsInRole("staff") || User.IsInRole("User") || User.IsInRole("admin")))
                    {
                        <li class="nav-item">
                            <a class="nav-link modern-nav-link disabled">@User.FindFirst("FullName")?.Value</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link modern-nav-link" asp-controller="Authen" asp-action="SignOut">Đăng Xuất</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link modern-nav-link" asp-controller="Authen" asp-action="Login">Đăng Nhập</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()  @* <-- PHẢI CÓ: nơi nội dung của các View sẽ hiển thị *@
    </div>

    @* Optional scripts section for views *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>