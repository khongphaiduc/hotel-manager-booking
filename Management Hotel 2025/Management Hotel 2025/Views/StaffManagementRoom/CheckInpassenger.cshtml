@{
    ViewData["Title"] = "Check-in Khách sạn 5 Sao";
    Layout = null;
}
@model Management_Hotel_2025.ViewModel.Passengers
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <style>
        body {
            background: linear-gradient(135deg,#dfe9f3,#ffffff 80%);
            min-height: 100vh;
        }
        .main-content {
            max-width: 1600px; /* tăng rộng tổng thể */
            margin: 40px auto;
            display: flex;
            gap: 24px; /* giảm khoảng cách giữa 2 bảng */
        }
        .checkin-container,
        .guest-list-container {
            flex: 1 1 0;
            min-width: 0;
            max-width: 55%; /* mỗi bảng rộng hơn */
            background: #fff;
            padding: 36px 32px; /* tăng padding nếu muốn bảng to hơn nữa */
            border-radius: 20px;
            box-shadow: 0 6px 32px rgba(0,0,0,0.09);
            display: flex;
            flex-direction: column;
        }
        .checkin-title {
            font-weight: 800;
            font-size: 2rem;
            letter-spacing: 2px;
            color: #0984e3;
            margin-bottom: 30px;
        }
        .form-label {
            font-weight: 500;
            color: #636e72;
        }
        .btn-checkin {
            background: linear-gradient(90deg,#0984e3,#00b894);
            color: #fff;
            font-weight: bold;
            border: none;
        }
        .btn-checkin:hover {
            background: linear-gradient(90deg,#00b894,#0984e3);
        }
        .form-select, .form-control {
            border-radius: 10px;
        }
        .bg-icon {
            width: 60px;
            height: 60px;
            background: #dff9fb;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 18px;
        }
        .bg-icon img {
            width: 38px;
            filter: drop-shadow(0 0 2px #00b894);
        }
        .guest-list-title {
            font-weight: 700;
            font-size: 1.5rem;
            color: #00b894;
            margin-bottom: 18px;
            text-align: center;
        }
        .guest-table {
            width: 100%;
            table-layout: fixed;
        }
        .guest-table th, .guest-table td {
            font-size: 0.97rem;
            vertical-align: middle;
        }
        .guest-table th {
            background: #dff9fb;
            color: #0984e3;
        }
        .guest-table tbody tr {
            transition: background 0.15s;
        }
        .guest-table tbody tr:hover {
            background: #f1f2f6;
        }
        .room-filter-group {
            margin-bottom: 18px;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .action-btn {
            margin-right: 4px;
            padding: 4px 10px;
            font-size: 0.93rem;
            text-decoration: none;
            display: inline-block;
        }
        .btn-edit {
            background: #fdcb6e;
            color: #2d3436;
            border: none;
        }
        .btn-edit:hover {
            background: #ffeaa7;
            color: #636e72;
        }
        .btn-delete {
            background: #d63031;
            color: #fff;
            border: none;
        }
        .btn-delete:hover {
            background: #ff7675;
            color: #2d3436;
        }
    </style>
    <script>
        function changeRoom() {
            var roomNo = document.getElementById('roomFilter').value;
            window.location.href = '@Url.Action("Index", "Guest")' + '?room=' + roomNo;
        }
        function confirmDelete(url) {
            if (confirm('Bạn có chắc chắn muốn xóa khách này không?')) {
                window.location.href = url;
            }
        }
    </script>
</head>
<body>
    <div class="main-content">
        <div class="checkin-container shadow">
            <div class="bg-icon">
                <img src="https://img.icons8.com/ios-filled/50/hotel-check-in.png" alt="Check-in Icon"/>
            </div>
            <h2 class="checkin-title text-center mb-4">Thủ tục check-in</h2>
            <form asp-action="Checkin" asp-controller="Guest" method="post" autocomplete="off">
                <input type="hidden" name="Id"  />
                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="guestCount" class="form-label">Số lượng khách</label>
                        <input type="number" class="form-control" id="guestCount" name="GuestCount" min="1" max="10" required >
                    </div>
                    <div class="col-md-6">
                        <label for="roomType" class="form-label">Số phòng</label>                   
                        <input type="number" class="form-control" id="roomType" name="RoomType" min="1" max="20" required >
                    </div>
                    <div class="col-12">
                        <label for="guestName" class="form-label">Tên hành khách</label>
                        <input asp-for="Name" type="text" class="form-control" id="guestName"  required placeholder="Họ và tên" >
                    </div>
                    <div class="col-md-6">
                        <label for="idNumber" class="form-label">Số CMND/CCCD/Hộ chiếu</label>
                        <input asp-for="CodeID" type="text" class="form-control" id="idNumber"  required placeholder="Nhập số giấy tờ" >
                    </div>
                    <div class="col-md-6">
                        <label for="nationality" class="form-label">Quốc tịch</label>
                        <input asp-for="Nationlity" type="text" class="form-control" id="nationality" name="Nationality" required placeholder="Quốc tịch" >
                    </div>
                    <div class="col-md-6">
                        <label for="phoneNumber" class="form-label">Số điện thoại</label>
                        <input asp-for="PhoneNumber" type="tel" class="form-control" id="phoneNumber" name="PhoneNumber" required placeholder="Nhập số điện thoại">
                    </div>
                    <div class="col-md-6">
                        <label for="email" class="form-label">Email</label>
                        <input asp-for="Email" type="email" class="form-control" id="email" name="Email" required placeholder="Email">
                    </div>
                    <div class="col-md-6">
                        <label for="gender" class="form-label">Giới tính</label>
                        <select asp-for="Sex" id="gender" name="Gender" class="form-select" required>
                            <option value="">-- Chọn giới tính --</option>
                            <option value="Nam">Nam</option>
                            <option value="Nữ">Nữ</option>
                            <option value="Khác">Khác</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label for="birthday" class="form-label">Ngày sinh</label>
                        <input asp-for="DateOfBirth" type="date" class="form-control" id="birthday" name="Birthday" required>
                    </div>
                    <div class="col-12">
                        <label for="address" class="form-label">Địa chỉ</label>
                        <input asp-for="Address" type="text" class="form-control" id="address" name="Address" required placeholder="Địa chỉ liên hệ">
                    </div>
                    <div class="col-12">
                        <label for="specialRequest" class="form-label">Yêu cầu đặc biệt</label>
                        <textarea asp-for="Note" class="form-control" id="specialRequest" name="SpecialRequest" rows="2" placeholder="Nhập yêu cầu (nếu có)"></textarea>
                    </div>
                </div>
                <button type="submit" class="btn btn-checkin w-100 mt-4">
                  Check-in
                </button>
            </form>
            <div id="resultMsg" class="mt-4">@ViewBag.Message</div>
        </div>
        <div class="guest-list-container shadow">
            <div class="guest-list-title">Khách của phòng 
                <span id="currentRoomNo" style="color:#0984e3;font-weight:bold;">số 101</span>
            </div>
            <table class="table table-bordered guest-table" id="guestTable">
                <thead>
                    <tr>
                        <th style="width:7%">STT</th>
                        <th style="width:35%">Tên khách</th>
                        <th style="width:12%">Giới tính</th>
                        <th>SĐT</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @* @if (guestsInRoom != null && guestsInRoom.Count > 0) *@
                    @* { *@
                    @*     int idx = 1; *@
                    @*     foreach (var guest in guestsInRoom) *@
                    @*     { *@
                    @*         <tr> *@
                    @*             <td>@idx</td> *@
                    @*             <td>@guest.GuestName</td> *@
                    @*             <td>@guest.Gender</td> *@
                    @*             <td>@guest.Nationality</td> *@
                    @*             <td>@guest.PhoneNumber</td> *@
                    @*             <td> *@
                    @*                 <a class="action-btn btn-edit" href="@Url.Action("Edit", "Guest", new { id = guest.Id, room = Model.CurrentRoom })">Chỉnh sửa</a> *@
                    @*                 <a class="action-btn btn-delete" href="javascript:void(0);" onclick="confirmDelete('@Url.Action("Delete", "Guest", new { id = guest.Id, room = Model.CurrentRoom })')">Xóa</a> *@
                    @*             </td> *@
                    @*         </tr> *@
                    @*         idx++; *@
                    @*     } *@
                    @* } *@
                    @* else *@
                    @* { *@
                    @*     <tr> *@
                    @*         <td colspan="6" class="text-center text-muted">Chưa có khách nào check-in phòng này</td> *@
                    @*     </tr> *@
                    @* } *@
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>