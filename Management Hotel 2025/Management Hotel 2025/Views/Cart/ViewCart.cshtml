@model Management_Hotel_2025.ViewModel.VNPay.PaymentInformationModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Giỏ hàng phòng khách sạn</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <!-- File CSS riêng của giỏ hàng -->
    <link rel="stylesheet" href="~/css/Cart.css">
</head>
<body>
    <div class="container py-5">
        <div class="mb-4 d-flex align-items-center gap-4">
            <a href="/Home/Index" class="icon-btn me-2">
                <i class="bi bi-house-door-fill fs-3 text-primary"></i>
            </a>
            <h2 class="fw-bold mb-0 fade-in">
                <i class="bi bi-cart fs-2 text-success"></i> Giỏ hàng phòng khách sạn
            </h2>
        </div>
        <div class="card cart-card fade-in">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead class="table-light">
                            <tr>
                                <th><i class="bi bi-door-open-fill"></i> Loại phòng</th>
                                <th>Nhận phòng</th>
                                <th>Trả phòng</th>
                                <th>Giá/phòng/ngày</th>
                                <th>Số ngày booking</th>
                                <th>Tạm tính</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="cart-items">
                            <tr class="cart-item">
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="https://source.unsplash.com/80x80/?room,deluxe" class="rounded hotel-thumb me-2" alt="">
                                        <span>Deluxe</span>
                                    </div>
                                </td>
                                <td>
                                    <input type="date" class="form-control checkin-date" value="2025-09-01" min="2025-09-01">
                                </td>
                                <td>
                                    <input type="date" class="form-control checkout-date" value="2025-09-05" min="2025-09-02">
                                </td>
                                <td class="price" data-price="120">$120</td>
                                <td>
                                    <input type="number" class="form-control days-input" min="1" value="4" readonly>
                                </td>
                                <td class="subtotal">$480</td>
                                <td>
                                    <button class="btn btn-outline-danger btn-sm remove-btn">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </td>
                            </tr>
                            <tr class="cart-item">
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="https://source.unsplash.com/80x80/?room,suite" class="rounded hotel-thumb me-2" alt="">
                                        <span>Suite</span>
                                    </div>
                                </td>
                                <td>
                                    <input type="date" class="form-control checkin-date" value="2025-10-10" min="2025-10-10">
                                </td>
                                <td>
                                    <input type="date" class="form-control checkout-date" value="2025-10-13" min="2025-10-11">
                                </td>
                                <td class="price" data-price="200">$200</td>
                                <td>
                                    <input type="number" class="form-control days-input" min="1" value="3" readonly>
                                </td>
                                <td class="subtotal">$600</td>
                                <td>
                                    <button class="btn btn-outline-danger btn-sm remove-btn">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a href="/Room/List" class="btn btn-outline-secondary">
                        <i class="bi bi-door-open"></i> Tiếp tục đặt phòng
                    </a>
                    <div class="fs-5 fw-bold total-price">
                        Tổng cộng: <span id="cart-total">$1080</span>
                    </div>

                    <form asp-controller="Payment" asp-action="CreatePaymentUrlVnpay" method="post">
                        <input type="hidden" asp-for="OrderType" value="other" />
                        <input type="hidden" asp-for="Amount" value="8989898" />

                        <input type="hidden" asp-for="OrderDescription" value="Pham Trung Duc Test Thanh Toan 1" />

                        <input type="hidden" asp-for="Name" value="other" />
                        <input type="submit" name="name" value="Thanh toán" />
                    </form>


                    
                </div>
            </div>
        </div>
    </div>
    <!-- File JS riêng cho giỏ hàng -->
    <script src="~/js/Cart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>