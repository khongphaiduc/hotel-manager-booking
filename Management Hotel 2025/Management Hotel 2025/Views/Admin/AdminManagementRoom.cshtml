@model IEnumerable<Management_Hotel_2025.ViewModel.ViewRoomModel>

@{
    Layout = "~/Views/Shared/AdminSidebar.cshtml";
}

<style>
    .filter-card {
        margin-bottom: 20px;
    }

    .action-bar {
        margin-bottom: 15px;
    }

    .action-buttons .btn {
        margin-right: 5px;
    }

    /* Loader Overlay */
    #page-loader {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.55);
        z-index: 99999;
        text-align: center;
        padding-top: 18%;
    }
</style>

<div id="page-loader">
    <div class="spinner-border text-light" style="width: 4rem; height: 4rem;"></div>
    <p class="text-light mt-3">Đang tải, vui lòng chờ...</p>
</div>

<div class="container-fluid mt-4">

    <div class="card shadow-sm filter-card">
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row g-3 align-items-end">
                    <div class="col-md-3">
                        <label class="form-label">Lọc theo tầng:</label>
                        <select name="floor" class="form-select" asp-items="ViewBag.Floors">
                            <option value="">Tất cả các tầng</option>
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Lọc theo trạng thái:</label>
                        <select name="status" class="form-select" asp-items="ViewBag.Statuses">
                            <option value="">Tất cả trạng thái</option>
                        </select>
                    </div>

                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-filter"></i> Lọc
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="action-bar text-end">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Thêm phòng mới
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="mb-0">Danh sách phòng</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 5%;">STT</th>
                            <th>Số phòng</th>
                            <th>Loại phòng</th>
                            <th>Giá (VNĐ)</th>
                            <th>Trạng thái</th>
                            <th style="width: 12%;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model == null || !Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center">Không tìm thấy dữ liệu phòng.</td>
                            </tr>
                        }
                        else
                        {
                            int stt = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(stt++)</td>
                                    <td>@item.NumberOfRooms</td>
                                    <td>@item.Name</td>
                                    <td>@item.Price.ToString("N0")</td>

                                    <td>
                                        @if (item.status == "Còn trống")
                                        {
                                            <span class="badge bg-success">Còn trống</span>
                                        }
                                        else if (item.status == "Đang có khách")
                                        {
                                            <span class="badge bg-danger">Đang có khách</span>
                                        }
                                        else if (item.status == "Đang dọn dẹp")
                                        {
                                            <span class="badge bg-warning text-dark">Đang dọn dẹp</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@item.status</span>
                                        }
                                    </td>

                                    <td class="action-buttons">
                                        <a asp-controller="Admin" asp-action="AdjustRoom" asp-route-idRoom="@item.IdRoom"
                                           class="btn btn-sm btn-outline-primary btn-edit">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.IdRoom" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const editButtons = document.querySelectorAll('.btn-edit');

        editButtons.forEach(btn => {
            btn.addEventListener('click', function () {
                document.getElementById('page-loader').style.display = 'block';
            });
        });
    });
</script>
