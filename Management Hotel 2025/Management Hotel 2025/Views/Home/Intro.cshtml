@{
    Layout = null;
}
<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Hotel TrungDuc Luxury — Chào mừng</title>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700&family=Montserrat:wght@400;600&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom intro CSS -->
    <link href="~/css/intro.css" rel="stylesheet" />
</head>
<body>
    <div class="intro-bg" aria-hidden="true"></div>

    <!-- Curtains: left/right halves (CSS sẽ dùng 2 ảnh khác nhau) -->
    <div id="curtains" aria-hidden="true" role="presentation">
        <div class="curtain left" role="presentation" aria-hidden="true"></div>
        <div class="curtain right" role="presentation" aria-hidden="true"></div>
    </div>

    <main class="intro-content d-flex flex-column justify-content-center align-items-centear text-center" role="main" aria-live="polite">
        <div class="logo-ornament" aria-hidden="true"></div>

        <h1 class="main-title" aria-label="Hotel TrungDuc Luxury Xin Kính Chào Quý Khách">
            <span class="hotel-name">Hotel <span class="brand">TrungDuc</span> Luxury</span>
            <span class="greeting d-block">Xin Kính Chào Quý Khách</span>
        </h1>

        <p class="subtitle mt-3">Nơi tinh hoa của sự chăm sóc  và  tiện nghi đẳng cấp đang chờ đón bạn khám phá</p>

        <a id="continueBtn" class="btn btn-td mt-4 disabled" href="@Url.Action("Index","Home")" role="button" aria-disabled="true">Tiếp tục</a>

        <p class="sr-note visually-hidden-focusable mt-3">Nhấn Esc để bỏ qua intro</p>
    </main>

    <a class="visually-hidden-focusable" href="@Url.Action("Index","Home")">Bỏ qua intro</a>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/intro.js"></script>
</body>
</html>