@model List<Management_Hotel_2025.ViewModel.MapRoom>
@{
    Layout = "~/Views/Shared/StaffHeader.cshtml";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bảng phòng của ngày</title>

    <!-- Bootstrap + Font Awesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />

    <style>
        /* Full-screen layout */
        html, body {
            height: 100%;
            margin: 0;
            background: #fafafa;
        }

        :root {
            --gap: 18px;
            --tile-min: 110px;
            --tile-h: 120px;
            --tan: #d2b48c;
        }

        /* Use full width and height */
        .page-wrap {
            display: flex;
            flex-direction: column;
            height: 100vh; /* full viewport height */
            overflow: hidden;
        }

        .page-body {
            flex: 1 1 auto;
            overflow: auto; /* allow scrolling inside content area */
            padding: 18px;
        }

        .container-board {
            width: 100%;
            max-width: 100%;
            margin: 0 auto;
        }

        .filters {
            margin-bottom: 12px;
        }

            .filters .btn {
                border-radius: 6px;
            }

        /* Floor section */
        .floor-section {
            background: #fff;
            padding: 12px;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.06);
            margin-bottom: 18px;
        }

        .floor-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
            gap: 8px;
        }

            .floor-header h5 {
                margin: 0;
                font-size: 16px;
            }

            .floor-header .controls {
                font-size: 14px;
                color: #666;
            }

        /* Grid for tiles inside each floor */
        .rooms-grid-floor {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(var(--tile-min), 1fr));
            gap: var(--gap);
        }

        .room-tile {
            height: var(--tile-h);
            border-radius: 6px;
            color: #fff;
            padding: 10px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.08);
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            cursor: pointer;
            transition: transform .12s ease, box-shadow .12s ease, opacity .12s ease;
        }

            .room-tile .tile-top {
                font-size: 12px;
                opacity: 0.95;
                text-align: left;
            }

            .room-tile .tile-number {
                font-size: 26px;
                font-weight: 700;
                text-align: center;
            }

            .room-tile .tile-icon {
                font-size: 18px;
                text-align: right;
            }

            .room-tile:hover {
                transform: translateY(-4px);
                box-shadow: 0 6px 18px rgba(0,0,0,0.12);
            }

            /* trạng thái */
            .room-tile.available {
                background: #28a745;
            }

            .room-tile.occupied {
                background: var(--tan);
                color: #fff;
            }

            .room-tile.blocked {
                background: var(--tan);
                color: #fff;
            }

            .room-tile.reserved {
                background: #0d6efd;
            }

            .room-tile.overdue {
                background: #dc3545;
            }

            .room-tile.maintenance {
                background: #6c757d;
            }

        /* legend */
        #legend {
            display: flex;
            gap: 12px;
            align-items: center;
            flex-wrap: wrap;
            margin-top: 14px;
        }

        .legend-item {
            display: flex;
            align-items: center;
            gap: 6px;
            color: #333;
        }

        .legend-box {
            width: 18px;
            height: 18px;
            border-radius: 4px;
            display: inline-block;
        }

        @@media (max-width:576px) {
            : root {
                --tile-min: 140px;
                --tile-h: 100px;
            }

            .room-tile .tile-number {
                font-size: 20px;
            }
        }
    </style>
</head>
<body>
    <div class="page-wrap">
        <!-- Header removed because your layout provides header -->

        <div class="page-body">
            <div class="container-board">
                <div class="filters mb-3">
                    <div class="d-flex flex-wrap gap-2 mb-3 align-items-center">
                        <div class="d-flex flex-wrap gap-2">
                            <button class="btn btn-outline-secondary filter-btn" data-filter="all">Tất cả <span class="badge bg-light text-dark ms-1" id="count-all">--</span></button>
                            <button class="btn text-white bg-success filter-btn" data-filter="available">Trống <span class="badge bg-light text-dark ms-1" id="count-available">--</span></button>
                            <button class="btn text-white" style="background:var(--tan)" data-filter="occupied">Đang sử dụng  <span class="badge bg-light text-dark ms-1" id="count-occupied">--</span></button>
                            <button class="btn text-white bg-danger filter-btn" data-filter="overdue">Quá hạn <span class="badge bg-light text-dark ms-1" id="count-overdue">--</span></button>
                            <button class="btn text-white bg-primary filter-btn" data-filter="reserved">Đã đặt <span class="badge bg-light text-dark ms-1" id="count-reserved">--</span></button>
                            <button class="btn text-white" style="background:#6c757d" data-filter="maintenance">Đang sửa <span class="badge bg-light text-dark ms-1" id="count-maintenance">--</span></button>
                        </div>

                        <!-- Reset button moved here (so header removal doesn't lose it) -->
                        <div class="ms-auto">
                            <button class="btn btn-sm btn-outline-secondary" id="resetFilters">Reset</button>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="showLegend" checked>
                            <label class="form-check-label" for="showLegend">Hiện chú thích</label>
                        </div>

                    </div>
                </div>

                <!-- Nơi render các section theo tầng -->
                <div id="floorsContainer"></div>

                <div id="legend" class="mt-3">
                    <span class="legend-item"><span class="legend-box bg-success"></span> Trống</span>
                    <span class="legend-item"><span class="legend-box" style="background:var(--tan)"></span> Bận / Đang ở</span>
                    <span class="legend-item"><span class="legend-box bg-danger"></span> Quá hạn</span>
                    <span class="legend-item"><span class="legend-box bg-primary"></span> Đã đặt</span>
                    <span class="legend-item"><span class="legend-box" style="background:#6c757d"></span> Đang sửa</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <script>
        (function () {
            // Dữ liệu mẫu (không còn trạng thái "không đến")
           const sampleRooms = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model));
            const floorsContainer = document.getElementById('floorsContainer');
            let currentStatusFilter = 'all';

            // Helper: floor number from room number (e.g., 101 -> 1)
            function floorOf(numberStr) {
                const n = parseInt(numberStr, 10) || 0;
                return Math.floor(n / 100);
            }

            function iconForStatus(status) {
                switch (status) {
                    case 'occupied': return '<i class="fa-solid fa-bed"></i>';           // đang ở
                    case 'reserved': return '<i class="fa-regular fa-calendar-check"></i>';     // đã đặt trước
                    case 'overdue': return '<i class="fa-solid fa-triangle-exclamation"></i>';   //quá hạn
                    case 'available': return '<i class="fa-solid fa-check"></i>';              // trống
                    case 'maintenance': return '<i class="fa-solid fa-screwdriver-wrench"></i>';  // bảo trì
                    default: return '<i class="fa-solid fa-door-closed"></i>';
                }
            }

            // Render grouped floors: create a section per floor with header + grid
            function renderGrouped(list) {
                floorsContainer.innerHTML = '';
                const floors = Array.from(new Set(list.map(r => floorOf(r.number))))
                    .filter(f => f >= 0)
                    .sort((a, b) => a - b); // sort ascending: floor 1, 2, 3, ...

                floors.forEach(floorNum => {
                    const roomsOnFloor = list.filter(r => floorOf(r.number) === floorNum);
                    const section = document.createElement('div');
                    section.className = 'floor-section';
                    section.setAttribute('data-floor', floorNum);

                    const header = document.createElement('div');
                    header.className = 'floor-header';
                    header.innerHTML = `
                        <h5>Tầng ${floorNum} <small class="text-muted">(${roomsOnFloor.length} phòng)</small></h5>
                        <div class="controls">
                            <span class="me-2">Hiển thị: <span class="badge bg-light text-dark" data-floor-badge="${floorNum}">${roomsOnFloor.length}</span></span>
                        </div>
                    `;

                    const grid = document.createElement('div');
                    grid.className = 'rooms-grid-floor';
                    // create tiles
                    roomsOnFloor.forEach(r => {
                        const tile = document.createElement('div');
                        tile.className = 'room-tile ' + r.status;
                        tile.setAttribute('data-status', r.status);
                        tile.setAttribute('data-number', r.number);
                        tile.innerHTML = `
                            <div class="tile-top">${r.type}</div>
                            <div class="tile-number">${r.number}</div>
                            <div class="tile-icon">${iconForStatus(r.status)}</div>
                        `;
                        grid.appendChild(tile);
                    });

                    section.appendChild(header);
                    section.appendChild(grid);
                    floorsContainer.appendChild(section);
                });

                if (floors.length === 0) {
                    floorsContainer.innerHTML = '<div class="alert alert-secondary">Không có phòng để hiển thị</div>';
                }

                updateCounts();
            }

            // Apply filters: status across all floor sections; hide floors with 0 visible tiles
            function applyFilters() {
                const sections = Array.from(document.querySelectorAll('.floor-section'));
                sections.forEach(sec => {
                    const tiles = Array.from(sec.querySelectorAll('.room-tile'));
                    let visibleCount = 0;
                    tiles.forEach(t => {
                        const statusOK = (currentStatusFilter === 'all') ||
                            (currentStatusFilter === 'occupied' && (t.classList.contains('occupied') || t.classList.contains('blocked'))) ||
                            t.classList.contains(currentStatusFilter);
                        if (statusOK) {
                            t.style.display = '';
                            visibleCount++;
                        } else {
                            t.style.display = 'none';
                        }
                    });
                    sec.style.display = (visibleCount > 0) ? '' : 'none';
                    const badge = sec.querySelector('[data-floor-badge]');
                    if (badge) badge.textContent = visibleCount;
                });

                updateCounts();
            }

            // Update global counts (buttons) based on currently visible tiles
            function updateCounts() {
                const allTiles = Array.from(document.querySelectorAll('.room-tile'));
                const visibleTiles = allTiles.filter(t => t.style.display !== 'none');

                const counts = {
                    all: visibleTiles.length,
                    available: visibleTiles.filter(t => t.classList.contains('available')).length,
                    occupied: visibleTiles.filter(t => t.classList.contains('occupied') || t.classList.contains('blocked')).length,
                    overdue: visibleTiles.filter(t => t.classList.contains('overdue')).length,
                    reserved: visibleTiles.filter(t => t.classList.contains('reserved')).length,
                    maintenance: visibleTiles.filter(t => t.classList.contains('maintenance')).length
                };
                Object.keys(counts).forEach(k => {
                    const el = document.getElementById('count-' + k);
                    if (el) el.textContent = counts[k];
                });
            }

            // Event delegation: filter buttons and tile clicks
            document.addEventListener('click', function (e) {
                const btn = e.target.closest('.filter-btn');
                if (btn) {
                    const filter = btn.getAttribute('data-filter');
                    currentStatusFilter = filter;
                    document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
                    btn.classList.add('active');
                    applyFilters();
                    return;
                }

                const tile = e.target.closest('.room-tile');
              if (tile) {
                          const number = tile.getAttribute('data-number');
                          const status = tile.getAttribute('data-status');
                         // điều hướng đến trang chi tiết phòng
                         window.location.href = `/StaffManagementRoom/Detail?roomNumber=${number}`;
                }
            });

            // Toggle legend
            document.getElementById('showLegend').addEventListener('change', function () {
                document.getElementById('legend').style.display = this.checked ? 'flex' : 'none';
            });

            // Reset filters
            document.getElementById('resetFilters').addEventListener('click', function () {
                currentStatusFilter = 'all';
                document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
                const allBtn = document.querySelector('.filter-btn[data-filter="all"]');
                if (allBtn) allBtn.classList.add('active');
                // show all sections & tiles
                document.querySelectorAll('.floor-section').forEach(sec => sec.style.display = '');
                document.querySelectorAll('.room-tile').forEach(t => t.style.display = '');
                updateCounts();
            });

            // Initialize grouped view and set default active filter
            renderGrouped(sampleRooms);
            const defBtn = document.querySelector('.filter-btn[data-filter="all"]');
            if (defBtn) defBtn.classList.add('active');

        })();
    </script>
</body>
</html>