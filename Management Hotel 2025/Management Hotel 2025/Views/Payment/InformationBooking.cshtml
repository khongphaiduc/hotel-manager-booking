@model PaymentInformationModel
@{
    Layout = null;
}
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Thông tin đặt phòng</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/BookingInfo.css" />
</head>
<body class="bg-modern">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card modern-card shadow-lg mb-4 animate__animated animate__fadeIn">
                    <div class="card-header modern-header d-flex align-items-center">
                        <a href="#" class="text-decoration-none text-dark me-3 modern-back">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                        <h4 class="mb-0 flex-grow-1 text-center fw-semibold modern-title">THÔNG TIN ĐẶT PHÒNG</h4>
                    </div>
                    <div class="card-body bg-white">
                        <div class="row g-4">
                            <!-- Left form -->
                            <div class="col-lg-7">
                                <form id="bookingForm" asp-action="CreatePaymentUrlVnpay" asp-controller="Payment" method="post">
                                    <div class="mb-3">
                                        <label class="form-label">Yêu cầu thêm <i class="bi bi-chat-left-dots ms-1 text-primary"></i></label>
                                        <textarea class="form-control modern-input" rows="2" placeholder="Ví dụ: Sở thích về Giường, địa điểm đón hoặc trả khách" name="note"></textarea>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Chính sách đặt phòng <span class="badge bg-info ms-2">Mới</span></label>
                                        <div class="p-3 border rounded bg-gradient-light modern-policy">
                                            <div class="form-check mb-2">
                                                <input class="form-check-input" type="checkbox" id="policy1" checked disabled>
                                                <label class="form-check-label fw-semibold" for="policy1">
                                                    Phòng Deluxe King hướng thành phố
                                                </label>
                                            </div>
                                            <small class="text-muted d-block mb-1">
                                                <i class="bi bi-info-circle me-1"></i>
                                                Hủy: Nếu hủy hoặc thay đổi đặt sớm hơn 7 ngày trước ngày nhận phòng, không có khoản phí hủy phòng nào phải thanh toán...
                                            </small>
                                            <small class="d-block mb-1"><i class="bi bi-credit-card-2-front me-1"></i> Đặt cọc 20% giá trị của phòng</small>
                                            <small class="d-block"><i class="bi bi-cup-straw me-1"></i> Đã bao gồm ăn sáng</small>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Phương thức thanh toán</label>
                                        <select class="form-select modern-input" id="paymentMethod" name="paymentMethod" required>
                                            <option value="vnpay">VNPAY (ATM/QR/Thẻ quốc tế)</option>
                                        </select>
                                    </div>
                                    <input type="hidden" asp-for="Name" value="@User.Identity.Name" />
                                    <input type="hidden" asp-for="Amount" value="@HttpContextAccessor.HttpContext.Session.GetString("Amount")" />
                                    <input type="hidden" asp-for="OrderDescription" value="Đặt Cọc Phòng" />
                                    <input type="hidden" asp-for="OrderType" value="Other" />

                                    <button style="background-color:bisque" type="submit" class="btn btn-modern-outline btn-lg w-100 fw-bold position-relative overflow-hidden d-flex justify-content-center align-items-center" id="bookingBtn">
                                        <span  class="d-flex align-items-center">
                                            <i class="bi bi-stars animated-icon me-2"></i>
                                            <span >THỰC HIỆN ĐẶT PHÒNG</span>
                                        </span>
                                        <span class="spinner-border spinner-border-sm d-none ms-2" id="submitSpinner"></span>
                                    </button>
                                </form>
                            </div>
                            <!-- Right booking info -->
                            <div class="col-lg-5">
                                <div class="p-4 bg-gradient-light rounded border mb-3 modern-summary animate__animated animate__fadeInRight">
                                    <h6 class="fw-bold mb-2"><i class="bi bi-receipt-cutoff me-1 text-success"></i> Yêu cầu đặt phòng của bạn</h6>
                                    <div class="mb-2">
                                        <strong>@HttpContextAccessor.HttpContext.Session.GetString("NameRoom")</strong>
                                        <div class="text-muted small">
                                            <i class="bi bi-door-closed"></i> Nhận phòng: @HttpContextAccessor.HttpContext.Session.GetString("StartDate")<br>
                                            <i class="bi bi-door-open"></i> Trả phòng: @HttpContextAccessor.HttpContext.Session.GetString("EndDate")
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="mb-2">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span>Thông tin phòng <i class="bi bi-chevron-down ms-1"></i></span>
                                            <span class="badge bg-warning text-dark">Early Bird</span>
                                        </div>
                                        <div class="small mt-2">
                                            <i class="bi bi-house-door"></i> 1 Phòng Deluxe King hướng thành phố<br>
                                            <i class="bi bi-calendar-range"></i> Early Bird 7/2025<br>
                                            <i class="bi bi-people"></i> Dành cho: 1 Người lớn - 0 Trẻ em - 0 Em bé<br>
                                            @{
                                                var amountStr = HttpContextAccessor.HttpContext.Session.GetString("Amount");
                                                decimal amount = 0;
                                                if (!string.IsNullOrEmpty(amountStr))
                                                    decimal.TryParse(amountStr, out amount);
                                            }
                                            <span class="fw-bold text-primary fs-5 d-block mt-2">Giá phòng: @string.Format("{0:N0}", amount) đ</span>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="mb-3 voucher-area">
                                        <div class="input-group">
                                            <input type="text" class="form-control modern-input" placeholder="Nhập mã khuyến mãi/mã voucher" id="voucherCode">
                                            <button type="button" class="btn btn-outline-primary" id="applyVoucher">
                                                <i class="bi bi-ticket-perforated"></i> ÁP DỤNG
                                            </button>
                                        </div>
                                        <div class="mt-2 small text-success d-none" id="voucherSuccess"><i class="bi bi-check-circle"></i> Mã hợp lệ!</div>
                                        <div class="mt-2 small text-danger d-none" id="voucherError"><i class="bi bi-x-circle"></i> Mã không hợp lệ.</div>
                                    </div>
                                    <div class="mb-2 d-flex justify-content-between align-items-center">
                                        <span class="fw-bold">Tổng giá:</span>
                                        <span class="fw-bold text-warning fs-4"> @string.Format("{0:N0}", amount) đ</span>
                                    </div>
                                    <div class="alert alert-light text-danger border-0 py-2 px-3 mt-3 mb-0">
                                        <i class="bi bi-info-circle"></i>
                                        Bao gồm tất cả các loại thuế và phí dịch vụ.<br>
                                        (Theo quy định của Ngân hàng Nhà nước Việt Nam, Quý khách vui lòng thanh toán bằng VND)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS + Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Hiệu ứng loading khi submit
        document.getElementById('bookingForm')?.addEventListener('submit', function(e) {
            document.getElementById('submitSpinner').classList.remove('d-none');
            document.getElementById('bookingBtn').classList.add('loading');
        });

        // Demo hiệu ứng voucher
        document.getElementById('applyVoucher')?.addEventListener('click', function() {
            var code = document.getElementById('voucherCode').value.trim();
            document.getElementById('voucherSuccess').classList.add('d-none');
            document.getElementById('voucherError').classList.add('d-none');
            if (code === '123') {
                document.getElementById('voucherSuccess').classList.remove('d-none');
            } else {
                document.getElementById('voucherError').classList.remove('d-none');
            }
        });
    </script>
</body>
</html>