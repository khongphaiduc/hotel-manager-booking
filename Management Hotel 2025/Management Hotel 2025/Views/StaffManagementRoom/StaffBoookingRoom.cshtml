@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Tạo Booking Nhiều Phòng - Rộng</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            font-family: 'Segoe UI', sans-serif;
        }

        .booking-form {
            max-width: 98vw;
            margin: 32px auto;
            background: #fff;
            border-radius: 18px;
            box-shadow: 0 4px 32px rgba(0,0,0,.09);
            padding: 30px 48px;
        }

        .form-title {
            font-size: 2.4rem;
            font-weight: 700;
            margin-bottom: 28px;
            color: #007bff;
        }

        .rooms-flex {
            display: flex;
            flex-wrap: wrap;
            gap: 32px 20px;
        }

        .room-card {
            border: 1px solid #e3e3e3;
            border-radius: 12px;
            padding: 18px 22px;
            background: #fafcff;
            position: relative;
            flex: 1 1 420px;
            min-width: 380px;
            max-width: 550px;
        }

        .remove-room-btn {
            position: absolute;
            top: 10px;
            right: 12px;
            z-index: 2;
        }
        @@media (max-width: 900px) {
            .booking-form

        {
            padding: 16px 8px;
        }

        .rooms-flex {
            gap: 10px 8px;
        }

        .room-card {
            min-width: 100%;
            max-width: 100%;
        }

        }
    </style>
</head>
<body>
    <div class="booking-form shadow">
        <div class="form-title text-center">Tạo Booking Nhiều Phòng</div>
        <fov  rm id="bookingForm" method="post" asp-action="CreateBooking" autocomplete="off">
            <div class="row mb-3">
                <div class="col-md-3">
                    <label class="form-label">Họ tên hành khách</label>
                    <input type="text" class="form-control" name="FullName" required placeholder="Nhập họ tên">
                </div>
                <div class="col-md-2">
                    <label class="form-label">Số điện thoại</label>
                    <input type="tel" class="form-control" name="Phone" required placeholder="Nhập số điện thoại">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" name="Email" required placeholder="Nhập email">
                </div>
                <div class="col-md-2">
                    <label class="form-label">Ngày sinh</label>
                    <input type="date" class="form-control" name="Birthday">
                </div>
                <div class="col-md-2">
                    <label class="form-label">Quốc tịch</label>
                    <input type="text" class="form-control" name="Nationality" placeholder="Nhập quốc tịch">
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-2">
                    <label class="form-label">Giới tính</label>
                    <select class="form-select" name="Gender">
                        <option value="">Chọn giới tính</option>
                        <option value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                        <option value="Khác">Khác</option>
                    </select>
                </div>
                <div class="col-md-10">
                    <label class="form-label">Ghi chú đặc biệt</label>
                    <textarea class="form-control" rows="1" name="Note" placeholder="Yêu cầu khác..."></textarea>
                </div>
            </div>
            <hr>
            <div class="mb-2 d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Danh sách phòng</h5>
                <button type="button" class="btn btn-success btn-sm" id="addRoomBtn">
                    <i class="bi bi-plus-circle"></i> Thêm phòng
                </button>
            </div>
            <div id="roomsContainer" class="rooms-flex"></div>
            <button type="submit" class="btn btn-primary w-100 mt-4" style="font-size:1.1rem;font-weight:600;">
                Tạo Booking
            </button>
        </fovrm>
    </div>

    <!-- Bootstrap JS & Icons -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <script>
        let roomIndex = 0;
        function createRoomCard(index) {
            return `
                <div class="room-card" id="roomCard${index}">
                    <button type="button" class="btn btn-outline-danger btn-sm remove-room-btn" onclick="removeRoom(${index})">
                        <i class="bi bi-x-lg"></i>
                    </button>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Loại phòng</label>
                            <select class="form-select" name="Rooms[${index}].RoomType" required>
                                <option value="">Chọn loại phòng</option>
                                <option value="Deluxe">Deluxe</option>
                                <option value="Suite">Suite</option>
                                <option value="Standard">Standard</option>
                            </select>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Nhận phòng</label>
                            <input type="date" class="form-control" name="Rooms[${index}].CheckIn" required>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Trả phòng</label>
                            <input type="date" class="form-control" name="Rooms[${index}].CheckOut" required>
                        </div>
                        <div class="col-md-12 mb-2">
                            <label class="form-label">Ghi chú phòng</label>
                            <input type="text" class="form-control" name="Rooms[${index}].RoomNote" placeholder="Ghi chú cho phòng này">
                        </div>
                    </div>
                </div>
            `;
        }
        function addRoom() {
            const container = document.getElementById('roomsContainer');
            container.insertAdjacentHTML('beforeend', createRoomCard(roomIndex));
            roomIndex++;
        }
        function removeRoom(idx) {
            const card = document.getElementById('roomCard' + idx);
            if (card) card.remove();
        }
        document.getElementById('addRoomBtn').addEventListener('click', addRoom);
        window.onload = addRoom;
    </script>
</body>
</html>